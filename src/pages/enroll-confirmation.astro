---
import BaseLayout from "../layouts/BaseLayout.astro";
import { COMPANY_NAME } from "../data/consts";
---

<BaseLayout
  siteTitle={`Application Received | ${COMPANY_NAME}`}
  siteDescription="Your enrollment application has been received. Our admissions team will contact you shortly to begin your aviation journey."
  class="bg-slate-50 text-slate-900"
>
  <div
    class="relative min-h-[85vh] flex items-center justify-center px-6 overflow-hidden"
  >
    <div
      class="absolute top-0 right-0 -translate-y-1/2 translate-x-1/4 w-96 h-96 bg-sky-100 rounded-full blur-3xl opacity-50"
    >
    </div>

    <div class="relative z-10 max-w-xl mx-auto text-center">
      <div class="mb-10 inline-flex items-center justify-center">
        <div
          class="relative w-24 h-24 bg-sky-800 text-white rounded-full flex items-center justify-center shadow-xl shadow-sky-900/20"
        >
          <svg
            class="w-12 h-12"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2.5"
              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>

      <h1
        class="text-4xl font-black text-sky-950 uppercase tracking-tighter mb-4"
      >
        Application <span class="text-sky-600">Logged</span>
      </h1>

      <div class="space-y-6">
        <p class="text-xl text-slate-600 leading-relaxed">
          Thank you for choosing <strong>{COMPANY_NAME}</strong>. <br
            class="hidden md:block"
          />
          Your path to the cockpit has officially begun.
        </p>

        <div
          class="bg-white border border-slate-200 p-6 rounded-2xl shadow-sm inline-block"
        >
          <p class="text-slate-700">
            <span
              class="block text-xs uppercase font-black tracking-widest text-sky-600 mb-1"
              >What to expect</span
            >
            An admissions advisor will contact you within <strong
              class="text-sky-900">24 hours</strong
            > to schedule your personalized consultation call.
          </p>
        </div>
      </div>

      <div class="mt-12 grid sm:grid-cols-3 gap-4">
        <a
          href="/"
          class="group flex flex-col items-center p-4 bg-white border border-slate-200 rounded-xl hover:border-sky-500 hover:shadow-lg transition-all"
        >
          <span class="text-sky-800 font-bold">Base</span>
          <span class="text-[10px] uppercase tracking-tighter text-slate-400"
            >Home</span
          >
        </a>

        <a
          href="/fleet"
          class="group flex flex-col items-center p-4 bg-white border border-slate-200 rounded-xl hover:border-sky-500 hover:shadow-lg transition-all"
        >
          <span class="text-sky-800 font-bold">Fleet</span>
          <span class="text-[10px] uppercase tracking-tighter text-slate-400"
            >Our Aircraft</span
          >
        </a>

        <a
          href="/about"
          class="group flex flex-col items-center p-4 bg-white border border-slate-200 rounded-xl hover:border-sky-500 hover:shadow-lg transition-all"
        >
          <span class="text-sky-800 font-bold">Academy</span>
          <span class="text-[10px] uppercase tracking-tighter text-slate-400"
            >Our Story</span
          >
        </a>
      </div>

      <p class="mt-12 text-sm text-slate-400">
        Need immediate assistance? <a
          href="/contact"
          class="text-sky-600 font-semibold underline decoration-2 underline-offset-4"
          >Contact Ops</a
        >
      </p>
    </div>
  </div>
</BaseLayout>
