---
import BaseLayout from "../layouts/BaseLayout.astro";
import ImageComp from "../components/ImageComp.astro";
import { EMAIL_ADDRESS, LOCATIONS, PHONE_NUMBER } from "../data/consts";
import Hero75 from "../components/Hero75.astro";
import CTASectionWithGradientCover from "../components/CTASectionWithGradientCover.astro";

const COMPANY_NAME = "Pitcairn Flight Academy";

// Import environment variables
const CONTACT_FORM_WEBHOOK_URL = import.meta.env.CONTACT_FORM_WEBHOOK_URL;
const PORTAL_API_KEY = import.meta.env.PORTAL_API_KEY;
const CP_ACCOUNT_RANDOM_ID = import.meta.env.CP_ACCOUNT_RANDOM_ID;

const heroData = {
  image: {
    src: "/src/assets/placeholder-dark-clouds-pitcairn-flight-academy-instrument-rating.webp",
    alt: "Flight Training Programs",
  },
  title: `Contact ${COMPANY_NAME}`,
  subTitle:
    "Have questions about our programs, admissions, or flight training? Our flight operations team is standing by to help you clear for takeoff.",
};

const ctaData = {
  title: "Define Your Mission. Reach the Majors.",
  description:
    "Your aviation journey begins with a single heading. Whether you are aiming for the airlines or mastering a new rating, we provide the roadmap and mentorship to get you there.",
  image: {
    src: "/src/assets/placeholder-dark-clouds-pitcairn-flight-academy-instrument-rating.webp",
    alt: "Training aircraft in flight",
  },
  primaryCTA: {
    text: "Schedule a Tour",
    href: "/contact",
  },
  secondaryCTA: {
    text: "Enroll Now",
    href: "/enroll",
  },
};

const metaProps = {
  siteTitle: `${COMPANY_NAME} | Contact Our Flight School`,
  siteDescription: `Contact ${COMPANY_NAME} to schedule a discovery flight, tour the school, or speak with an instructor about pilot training.`,
  siteKeywords: `${COMPANY_NAME}, contact flight school, aviation training info, Heritage Field address, flight school phone`,
};
---

<BaseLayout {...metaProps}>
  <Hero75 data={heroData} />

  <section class="py-16 md:py-24 bg-slate-50">
    <div class="max-w-7xl mx-auto px-5 md:px-8">
      <div class="grid lg:grid-cols-12 gap-16">
        <div class="lg:col-span-5 space-y-8">
          <div>
            <h2
              class="text-4xl font-black text-sky-900 uppercase tracking-tight mb-4"
            >
              Get in <span class="text-sky-600">Touch</span>
            </h2>
            <p class="text-lg text-slate-600 leading-relaxed">
              Ready to start your training? Reach out to our admissions office
              or visit our facilities at the Jetport.
            </p>
          </div>

          <div class="grid gap-4">
            <a
              href={`tel:${PHONE_NUMBER}`}
              class="group flex items-center p-6 bg-white border border-slate-200 rounded-2xl shadow-sm hover:shadow-md hover:border-sky-200 transition-all"
            >
              <div
                class="w-14 h-14 bg-sky-100 text-sky-600 rounded-xl flex items-center justify-center shrink-0 group-hover:bg-sky-600 group-hover:text-white transition-colors"
              >
                <svg
                  class="w-7 h-7"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path></svg
                >
              </div>
              <div class="ml-5">
                <p
                  class="text-sm font-bold text-sky-900 uppercase tracking-widest opacity-60"
                >
                  Call Operations
                </p>
                <p class="text-xl font-bold text-slate-900">{PHONE_NUMBER}</p>
              </div>
            </a>

            <a
              href={`mailto:${EMAIL_ADDRESS}`}
              class="group flex items-center p-6 bg-white border border-slate-200 rounded-2xl shadow-sm hover:shadow-md hover:border-sky-200 transition-all"
            >
              <div
                class="w-14 h-14 bg-sky-100 text-sky-600 rounded-xl flex items-center justify-center shrink-0 group-hover:bg-sky-600 group-hover:text-white transition-colors"
              >
                <svg
                  class="w-7 h-7"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path></svg
                >
              </div>
              <div class="ml-5">
                <p
                  class="text-sm font-bold text-sky-900 uppercase tracking-widest opacity-60"
                >
                  Email Support
                </p>
                <p class="text-xl font-bold text-slate-900">{EMAIL_ADDRESS}</p>
              </div>
            </a>

            <div
              class="flex items-start p-6 bg-white border border-slate-200 rounded-2xl shadow-sm"
            >
              <div
                class="w-14 h-14 bg-sky-100 text-sky-600 rounded-xl flex items-center justify-center shrink-0"
              >
                <svg
                  class="w-7 h-7"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg
                >
              </div>
              <div class="ml-5">
                <p
                  class="text-sm font-bold text-sky-900 uppercase tracking-widest opacity-60"
                >
                  Flight Line Address
                </p>
                <p class="text-lg font-bold text-slate-900 leading-snug">
                  {LOCATIONS[0].address}<br />
                  {LOCATIONS[0].city}, {LOCATIONS[0].state}
                  {LOCATIONS[0].zip}
                </p>
              </div>
            </div>
          </div>
        </div>

        <div class="lg:col-span-7">
          <div
            class="bg-white p-8 md:p-12 rounded-2xl shadow-xl shadow-sky-900/5 border border-slate-100"
          >
            <h3
              class="text-2xl font-bold text-sky-900 mb-8 flex items-center gap-3"
            >
              <span class="w-8 h-1 bg-sky-600 rounded-2xl"></span>
              Flight Inquiry Form
            </h3>

            <form id="contactForm" class="space-y-5">
              <div class="hidden" aria-hidden="true">
                <input
                  type="text"
                  id="website"
                  name="website"
                  tabindex="-1"
                  autocomplete="off"
                />
              </div>

              <div class="grid md:grid-cols-2 gap-5">
                <div>
                  <label
                    for="name"
                    class="block text-xs font-black uppercase tracking-widest text-slate-400 mb-2"
                    >Full Name *</label
                  >
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-5 py-4 bg-slate-50 border-none rounded-xl focus:ring-2 focus:ring-sky-500 transition-all placeholder:text-slate-300"
                    placeholder="John Doe"
                  />
                </div>
                <div>
                  <label
                    for="email"
                    class="block text-xs font-black uppercase tracking-widest text-slate-400 mb-2"
                    >Email Address *</label
                  >
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-5 py-4 bg-slate-50 border-none rounded-xl focus:ring-2 focus:ring-sky-500 transition-all placeholder:text-slate-300"
                    placeholder="john@example.com"
                  />
                </div>
              </div>

              <div class="grid md:grid-cols-2 gap-5">
                <div>
                  <label
                    for="phone"
                    class="block text-xs font-black uppercase tracking-widest text-slate-400 mb-2"
                    >Phone Number</label
                  >
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    class="w-full px-5 py-4 bg-slate-50 border-none rounded-xl focus:ring-2 focus:ring-sky-500 transition-all placeholder:text-slate-300"
                    placeholder="(555) 000-0000"
                  />
                </div>
                <div>
                  <label
                    for="subject"
                    class="block text-xs font-black uppercase tracking-widest text-slate-400 mb-2"
                    >Inquiry Topic *</label
                  >
                  <select
                    id="subject"
                    name="subject"
                    required
                    class="w-full px-5 py-4 bg-slate-50 border-none rounded-xl focus:ring-2 focus:ring-sky-500 transition-all text-slate-600"
                  >
                    <option value="">Select a topic...</option>
                    <option value="General Inquiry">General Inquiry</option>
                    <option value="Program Information"
                      >Program Information</option
                    >
                    <option value="Admissions">Admissions</option>
                    <option value="Financing">Financing Options</option>
                    <option value="Schedule Consultation"
                      >Schedule a Consultation</option
                    >
                  </select>
                </div>
              </div>

              <div>
                <label
                  for="message"
                  class="block text-xs font-black uppercase tracking-widest text-slate-400 mb-2"
                  >Message *</label
                >
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="5"
                  class="w-full px-5 py-4 bg-slate-50 border-none rounded-xl focus:ring-2 focus:ring-sky-500 transition-all resize-none placeholder:text-slate-300"
                  placeholder="How can our flight instructors help you?"
                ></textarea>
              </div>

              <div
                class="flex gap-4 p-4 bg-slate-50 rounded-xl border border-slate-100"
              >
                <div class="flex h-6 items-center">
                  <button
                    type="button"
                    id="terms-toggle"
                    class="bg-slate-300 flex w-10 flex-none cursor-pointer rounded-2xl p-1 transition-colors duration-200 ease-in-out"
                    role="switch"
                    aria-checked="false"
                  >
                    <span
                      id="terms-thumb"
                      class="translate-x-0 h-4 w-4 transform rounded-2xl bg-white shadow-sm transition duration-200"
                    ></span>
                  </button>
                  <input
                    type="hidden"
                    id="agree-terms"
                    name="agree-terms"
                    value="no"
                  />
                </div>
                <label
                  class="text-xs leading-5 text-slate-500"
                  id="switch-1-label"
                >
                  I agree to the <a
                    href="/privacy-policy"
                    class="font-bold text-sky-600 underline">Privacy Policy</a
                  >. By providing my number, I agree to receive text updates
                  regarding my flight training inquiry.
                </label>
              </div>

              <button
                type="submit"
                id="submit-btn"
                disabled
                class="w-full bg-slate-200 cursor-not-allowed text-slate-500 px-8 py-5 rounded-2xl font-black uppercase tracking-widest text-sm transition-all flex items-center justify-center gap-3"
              >
                <span id="buttonText">Send Mission Brief</span>
                <svg
                  id="buttonSpinner"
                  class="hidden animate-spin h-5 w-5 text-white"
                  viewBox="0 0 24 24"
                  ><circle
                    class="opacity-25"
                    cx="12"
                    cy="12"
                    r="10"
                    stroke="currentColor"
                    stroke-width="4"></circle><path
                    class="opacity-75"
                    fill="currentColor"
                    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                  ></path></svg
                >
              </button>

              <div
                id="errorMessage"
                class="hidden bg-red-50 text-red-700 p-4 rounded-xl text-sm font-bold border border-red-100"
              >
                Something went wrong. Please try again or call us directly.
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <CTASectionWithGradientCover {...ctaData} />
</BaseLayout>

<script
  define:vars={{
    CONTACT_FORM_WEBHOOK_URL,
    PORTAL_API_KEY,
    CP_ACCOUNT_RANDOM_ID,
  }}
>
  // Form handling logic (kept your existing logic but updated class names for the new styling)
  const form = document.getElementById("contactForm");
  const toggle = document.getElementById("terms-toggle");
  const thumb = document.getElementById("terms-thumb");
  const hiddenInput = document.getElementById("agree-terms");
  const submitButton = document.getElementById("submit-btn");
  const buttonText = document.getElementById("buttonText");
  const buttonSpinner = document.getElementById("buttonSpinner");
  const errorMessage = document.getElementById("errorMessage");

  let isChecked = false;

  toggle?.addEventListener("click", () => {
    isChecked = !isChecked;
    hiddenInput.value = isChecked ? "yes" : "no";
    toggle.setAttribute("aria-checked", isChecked.toString());

    if (isChecked) {
      toggle.classList.replace("bg-slate-300", "bg-sky-600");
      thumb.classList.replace("translate-x-0", "translate-x-4");
      submitButton.disabled = false;
      submitButton.classList.replace("bg-slate-200", "bg-sky-600");
      submitButton.classList.replace("text-slate-500", "text-white");
      submitButton.classList.remove("cursor-not-allowed");
    } else {
      toggle.classList.replace("bg-sky-600", "bg-slate-300");
      thumb.classList.replace("translate-x-4", "translate-x-0");
      submitButton.disabled = true;
      submitButton.classList.replace("bg-sky-600", "bg-slate-200");
      submitButton.classList.replace("text-white", "text-slate-500");
      submitButton.classList.add("cursor-not-allowed");
    }
  });

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();
    const formData = new FormData(form);

    // UI Loading State
    submitButton.disabled = true;
    buttonText.textContent = "Transmitting...";
    buttonSpinner.classList.remove("hidden");
    errorMessage.classList.add("hidden");

    const fullName = formData.get("name")?.toString() || "";
    const nameParts = fullName.split(" ");
    const firstName = nameParts[0] || "";
    const lastName = nameParts.slice(1).join(" ") || "";

    try {
      const [ghlRes, portalRes] = await Promise.all([
        fetch(CONTACT_FORM_WEBHOOK_URL, {
          method: "POST",
          headers: { "Content-Type": "application/x-www-form-urlencoded" },
          body: new URLSearchParams(formData).toString(),
        }),
        fetch("https://portal.rightruddermarketing.com/api/leads", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            Accept: "application/json",
            "x-api-key": PORTAL_API_KEY,
          },
          body: JSON.stringify({
            first_name: firstName,
            last_name: lastName,
            email: formData.get("email"),
            phone: formData.get("phone"),
            campaign: "contact",
            account_random_id: CP_ACCOUNT_RANDOM_ID,
          }),
        }),
      ]);

      if (ghlRes.ok && portalRes.ok) {
        window.location.href = "/contact-confirmation";
      } else {
        throw new Error("Failed");
      }
    } catch (err) {
      errorMessage.classList.remove("hidden");
      submitButton.disabled = false;
      buttonText.textContent = "Send Mission Brief";
      buttonSpinner.classList.add("hidden");
    }
  });
</script>
