---
import BaseLayout from "../layouts/BaseLayout.astro";
import ImageComp from "../components/ImageComp.astro";
import { PHONE_NUMBER } from "../data/consts";

const COMPANY_NAME = "Pitcairn Flight Academy";
---

<BaseLayout
  siteTitle={`500 - System Error | ${COMPANY_NAME}`}
  siteDescription="We are experiencing a technical issue. Our ground crew is working to get the system back online."
>
  <section
    class="relative min-h-screen flex items-center justify-center bg-sky-900 overflow-hidden py-20 px-5"
  >
    <div
      class="absolute inset-0 z-0 opacity-10"
      style="background-image: linear-gradient(#fff 1px, transparent 1px), linear-gradient(90deg, #fff 1px, transparent 1px); background-size: 40px 40px;"
    >
    </div>

    <div class="absolute inset-0 z-0">
      <ImageComp
        src="/src/assets/placeholder-dark-clouds-pitcairn-flight-academy-instrument-rating.webp"
        alt="Pitcairn Maintenance"
        class="w-full h-full object-cover opacity-20 contrast-125"
      />
      <div
        class="absolute inset-0 bg-gradient-to-br from-sky-800 via-sky-900 to-slate-950"
      >
      </div>
    </div>

    <div class="relative z-10 max-w-4xl mx-auto text-center">
      <div class="relative inline-block mb-10">
        <span
          class="absolute -inset-10 bg-red-500/20 blur-[80px] rounded-2xl animate-pulse"
        ></span>
        <h1
          class="relative text-[10rem] md:text-[14rem] font-black text-white/10 leading-none tracking-tighter select-none"
        >
          500
        </h1>
        <div class="absolute inset-0 flex flex-col items-center justify-center">
          <span
            class="text-red-400 font-black text-xs uppercase tracking-[0.5em] mb-2"
            >Mechanical Failure</span
          >
          <h2
            class="text-4xl md:text-6xl font-black text-white uppercase tracking-tighter italic"
          >
            System <span class="text-sky-400">Grounded</span>
          </h2>
        </div>
      </div>

      <div class="space-y-6 mb-12">
        <p
          class="text-sky-100 text-lg md:text-xl max-w-xl mx-auto leading-relaxed font-medium"
        >
          We've encountered a critical server error. Our ground crew and
          engineers have been notified and are working to clear the issue.
        </p>
      </div>

      <div
        class="flex flex-col sm:flex-row items-center justify-center gap-4 max-w-2xl mx-auto"
      >
        <button
          onclick="window.location.reload()"
          class="w-full sm:w-auto group flex items-center justify-center gap-3 bg-white text-sky-900 px-10 py-5 rounded-2xl font-black uppercase text-xs tracking-[0.2em] transition-all hover:bg-sky-400 hover:text-white hover:scale-[1.03]"
        >
          <svg
            class="w-5 h-5 transition-transform group-hover:rotate-180 duration-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2.5"
              d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
            ></path>
          </svg>
          Retry
        </button>

        <a
          href="/"
          class="w-full sm:w-auto group flex items-center justify-center gap-3 bg-sky-950 text-white border border-sky-700/50 px-10 py-5 rounded-2xl font-black uppercase text-xs tracking-[0.2em] transition-all hover:bg-sky-900 hover:scale-[1.03]"
        >
          Back to Home page
          <svg
            class="w-5 h-5 transition-transform group-hover:translate-x-1"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2.5"
              d="M13 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </a>
      </div>

      <div
        class="mt-16 pt-8 border-t border-white/10 inline-flex items-center gap-8"
      >
        <div class="flex items-center gap-3">
          <div class="w-2 h-2 bg-red-500 rounded-2xl animate-ping"></div>
          <span
            class="text-[10px] font-bold uppercase tracking-widest text-sky-300"
            >Engineering Notified</span
          >
        </div>
        <div class="hidden md:block w-px h-4 bg-white/10"></div>
        <a
          href={`tel:${PHONE_NUMBER}`}
          class="text-sky-200 hover:text-white text-xs font-black uppercase tracking-widest transition-colors"
        >
          Contact Us: {PHONE_NUMBER}
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Warning Scanline Effect */
  section::after {
    content: " ";
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: linear-gradient(
      rgba(14, 165, 233, 0.05) 50%,
      rgba(0, 0, 0, 0.1) 50%
    );
    z-index: 2;
    background-size: 100% 4px;
    pointer-events: none;
  }
</style>
