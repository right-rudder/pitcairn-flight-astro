---
import BaseLayout from "../layouts/BaseLayout.astro";
import FAQs from "../components/FAQs.astro";
import { PHONE_NUMBER } from "../data/consts";
import Hero75 from "../components/Hero75.astro";
import { COMPANY_NAME } from "../input/consts";

const heroData = {
  image: {
    src: "/src/assets/angry-_-kat-5R4fBlHEegc-unsplash.jpg",
    alt: "Flight Training Programs",
  },
  title: "Frequently Asked Questions",
  subTitle:
    "Get answers to common questions about flight training, costs, timelines, safety, and becoming a pilot at {COMPANY_NAME}.",
};

const metaProps = {
  siteTitle: `${COMPANY_NAME} | Flight Training FAQs`,
  siteDescription: `Find answers to common flight training and pilot school questions at ${COMPANY_NAME}.`,
  siteKeywords: `${COMPANY_NAME}, flight training FAQs, pilot school questions, aviation training info`,
};
---

<BaseLayout {...metaProps}>
  <Hero75 data={heroData} />

  <!-- All FAQs Section -->
  <section class="py-16 md:py-24 bg-white">
    <div class="max-w-4xl mx-auto px-5 md:px-8 lg:px-12">
      <FAQs showCategory={true} />
    </div>
  </section>

  <!-- Still Have Questions CTA -->
  <section class="py-16 md:py-24 bg-gray-50">
    <div class="max-w-4xl mx-auto px-5 md:px-8 lg:px-12 text-center">
      <div
        class="bg-linear-to-br bg-gray-900 rounded-2xl p-10 md:p-12 text-white shadow-xl flex flex-col items-center"
      >
        <svg
          class="w-16 h-16 text-muted-50 mx-auto mb-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
          ></path>
        </svg>
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Still Have Questions?
        </h2>
        <p class="text-xl text-muted-50 max-w-xl mb-8 leading-relaxed">
          Our admissions team is here to help. Get personalized answers to your
          specific questions about training, costs, scheduling, and career
          paths.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={`tel:${PHONE_NUMBER}`}
            class="inline-flex items-center justify-center bg-white text-monza-600 px-8 py-4 rounded-lg font-bold text-lg hover:bg-gray-100 transition-colors shadow-lg"
          >
            <svg
              class="w-6 h-6 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            Call {PHONE_NUMBER}
          </a>
          <a
            href="/new-to-flying"
            class="inline-flex items-center justify-center bg-monza-700 text-white px-8 py-4 rounded-lg font-bold text-lg hover:bg-monza-800 transition-colors border-2 border-white/20"
          >
            <svg
              class="w-6 h-6 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
            New to Flying? Start Here
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Links -->
  <section class="py-16 md:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-5 md:px-8 lg:px-12">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Explore {COMPANY_NAME}
        </h2>
        <p class="text-xl text-gray-600">
          Learn more about our programs, fleet, and team.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <a
          href="/programs"
          class="group bg-gray-50 hover:bg-monza-50 border border-gray-200 hover:border-monza-300 rounded-xl p-8 transition-all"
        >
          <div
            class="w-12 h-12 bg-monza-100 group-hover:bg-monza-200 rounded-lg flex items-center justify-center mb-4 transition-colors"
          >
            <svg
              class="w-6 h-6 text-monza-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
              ></path>
            </svg>
          </div>
          <h3
            class="text-xl font-bold text-gray-900 mb-2 group-hover:text-monza-600 transition-colors"
          >
            Training Programs
          </h3>
          <p class="text-gray-600">
            Explore our complete range of pilot training programs from Private
            Pilot to Multi-Engine CFI.
          </p>
        </a>

        <a
          href="/aircraft"
          class="group bg-gray-50 hover:bg-monza-50 border border-gray-200 hover:border-monza-300 rounded-xl p-8 transition-all"
        >
          <div
            class="w-12 h-12 bg-monza-100 group-hover:bg-monza-200 rounded-lg flex items-center justify-center mb-4 transition-colors"
          >
            <svg
              class="w-6 h-6 text-monza-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
            </svg>
          </div>
          <h3
            class="text-xl font-bold text-gray-900 mb-2 group-hover:text-monza-600 transition-colors"
          >
            Our Fleet
          </h3>
          <p class="text-gray-600">
            Train in modern aircraft equipped with Garmin G1000 glass cockpit
            avionics and professional systems.
          </p>
        </a>

        <a
          href="/about"
          class="group bg-gray-50 hover:bg-monza-50 border border-gray-200 hover:border-monza-300 rounded-xl p-8 transition-all"
        >
          <div
            class="w-12 h-12 bg-monza-100 group-hover:bg-monza-200 rounded-lg flex items-center justify-center mb-4 transition-colors"
          >
            <svg
              class="w-6 h-6 text-monza-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
          </div>
          <h3
            class="text-xl font-bold text-gray-900 mb-2 group-hover:text-monza-600 transition-colors"
          >
            About
          </h3>
          <p class="text-gray-600">
            Learn about our 34,000+ pilots trained, dual DPE access, and 12-year
            zero-cancellation record.
          </p>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
