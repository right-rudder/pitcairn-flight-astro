---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import type { GetStaticPaths } from "astro";
import type { CollectionEntry } from "astro:content";
import ImageComp from "../../components/ImageComp.astro";
import { COMPANY_NAME } from "../../data/consts";

export const getStaticPaths = (async () => {
  const aircraft = await getCollection("aircraft");
  return aircraft.map((plane: CollectionEntry<"aircraft">) => ({
    params: { slug: plane.slug },
    props: { plane },
  }));
}) satisfies GetStaticPaths;

type Props = {
  plane: CollectionEntry<"aircraft">;
};

const { plane } = Astro.props as Props;
const { Content } = await plane.render();
---

<BaseLayout
  siteTitle={`${plane.data.name} | ${COMPANY_NAME}`}
  siteDescription={plane.data.description}
  siteImage={plane.data.image}
>
  <article class="py-24 md:py-32 bg-slate-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-6">
      <a
        href="/aircraft"
        class="inline-flex items-center text-sky-600 font-bold text-sm uppercase tracking-widest mb-10 group"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-4 h-4 mr-2 transition-transform group-hover:-translate-x-1"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2.5"
            d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Hangar
      </a>

      <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
        <div class="lg:col-span-8 space-y-12">
          <div
            class="relative group overflow-hidden rounded-[2.5rem] shadow-2xl"
          >
            <ImageComp
              src={plane.data.image}
              alt={plane.data.name}
              class="w-full aspect-video object-cover transition-transform duration-1000 group-hover:scale-105"
            />
            <div class="absolute bottom-6 left-6">
              <span
                class="px-4 py-2 bg-slate-900/90 backdrop-blur-md text-white font-mono text-lg rounded-xl border border-white/20 shadow-2xl"
              >
                {plane.data.tailNumber}
              </span>
            </div>
          </div>

          <div
            class="bg-white p-8 md:p-12 rounded-[2.5rem] border border-slate-100 shadow-sm"
          >
            <h1
              class="text-4xl md:text-5xl font-black text-slate-900 mb-4 tracking-tight"
            >
              {plane.data.name}
            </h1>
            <p
              class="text-xl text-sky-600 font-bold mb-8 uppercase tracking-widest text-sm"
            >
              {plane.data.model}
            </p>

            <div
              class="prose prose-slate max-w-none prose-p:text-slate-600 prose-p:leading-relaxed prose-headings:text-slate-900 prose-strong:text-slate-950"
            >
              <p
                class="text-xl leading-relaxed text-slate-700 font-medium mb-8"
              >
                {plane.data.description}
              </p>
              <Content />
            </div>
          </div>
        </div>

        <div class="lg:col-span-4 space-y-8">
          <div
            class="bg-slate-900 rounded-[2.5rem] p-8 text-white shadow-2xl relative overflow-hidden"
          >
            <div
              class="absolute -top-12 -right-12 w-32 h-32 bg-sky-500/10 rounded-2xl blur-3xl"
            >
            </div>

            <h2 class="text-xl font-bold mb-8 flex items-center gap-3">
              <span class="w-2 h-8 bg-sky-500 rounded-2xl"></span>
              Mission Specs
            </h2>

            <div class="space-y-6">
              {
                plane.data.specifications.engines && (
                  <div class="flex items-start gap-4">
                    <div class="w-10 h-10 rounded-xl bg-white/5 flex items-center justify-center shrink-0">
                      <svg
                        class="w-5 h-5 text-sky-400"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M13 10V3L4 14h7v7l9-11h-7z"
                        />
                      </svg>
                    </div>
                    <div>
                      <p class="text-[10px] uppercase tracking-widest text-slate-400 font-bold mb-1">
                        Powerplant
                      </p>
                      <p class="font-bold">
                        {plane.data.specifications.engines}
                      </p>
                    </div>
                  </div>
                )
              }

              {
                plane.data.specifications.seats && (
                  <div class="flex items-start gap-4">
                    <div class="w-10 h-10 rounded-xl bg-white/5 flex items-center justify-center shrink-0">
                      <svg
                        class="w-5 h-5 text-sky-400"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                        />
                      </svg>
                    </div>
                    <div>
                      <p class="text-[10px] uppercase tracking-widest text-slate-400 font-bold mb-1">
                        Seating
                      </p>
                      <p class="font-bold">
                        {plane.data.specifications.seats} Occupants
                      </p>
                    </div>
                  </div>
                )
              }

              {
                plane.data.specifications.cruiseSpeed && (
                  <div class="flex items-start gap-4">
                    <div class="w-10 h-10 rounded-xl bg-white/5 flex items-center justify-center shrink-0">
                      <svg
                        class="w-5 h-5 text-sky-400"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                        />
                      </svg>
                    </div>
                    <div>
                      <p class="text-[10px] uppercase tracking-widest text-slate-400 font-bold mb-1">
                        Max Cruise
                      </p>
                      <p class="font-bold">
                        {plane.data.specifications.cruiseSpeed}
                      </p>
                    </div>
                  </div>
                )
              }
            </div>
          </div>

          {
            plane.data.features && (
              <div class="bg-white rounded-[2.5rem] p-8 border border-slate-100 shadow-sm">
                <h3 class="text-sm font-bold text-slate-900 uppercase tracking-widest mb-6">
                  Key Features
                </h3>
                <ul class="space-y-4">
                  {plane.data.features.map((feature: string) => (
                    <li class="flex items-start gap-3">
                      <div class="mt-1 w-5 h-5 rounded-2xl bg-sky-50 flex items-center justify-center shrink-0">
                        <svg
                          class="w-3 h-3 text-sky-600"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="3"
                          viewBox="0 0 24 24"
                        >
                          <path d="M5 13l4 4L19 7" />
                        </svg>
                      </div>
                      <span class="text-sm text-slate-700 font-medium">
                        {feature}
                      </span>
                    </li>
                  ))}
                </ul>
              </div>
            )
          }

          <div class="sticky top-8">
            <div
              class="bg-sky-600 rounded-[2.5rem] p-8 text-white text-center shadow-xl shadow-sky-900/20"
            >
              <h3 class="text-xl font-bold mb-4">Fly this Aircraft</h3>
              <p class="text-sky-100 text-sm mb-6">
                Available for primary training, advanced ratings, and rental.
              </p>
              <a
                href="/contact"
                class="block w-full py-4 bg-white text-sky-600 font-bold rounded-2xl hover:bg-sky-50 transition-colors shadow-lg"
              >
                Book Checkout Flight
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </article>
</BaseLayout>
