---
import BaseLayout from "../layouts/BaseLayout.astro";
import ImageComp from "../components/ImageComp.astro";
import { EMAIL_ADDRESS, LOCATIONS, PHONE_NUMBER } from "../data/consts";
import Hero75 from "../components/Hero75.astro";
import CTASectionWithGradientCover from "../components/CTASectionWithGradientCover.astro";
import FormDiscoveryFlight from "../components/Forms/FormDiscoveryFlight.astro";
import LocationSection from "../components/LocationSection.astro";

const COMPANY_NAME = "Pitcairn Flight Academy";

// Import environment variables
const CONTACT_FORM_WEBHOOK_URL = import.meta.env.CONTACT_FORM_WEBHOOK_URL;
const PORTAL_API_KEY = import.meta.env.PORTAL_API_KEY;
const CP_ACCOUNT_RANDOM_ID = import.meta.env.CP_ACCOUNT_RANDOM_ID;

const heroData = {
  image: {
    src: "/src/assets/instagram/pitcairn-flight-academy_Philadelphia-PA_flight-training_pilots-inside-plane-talking.jpg",
    alt: "Pilots inside plane talking at Pitcairn Flight Academy in Philadelphia, PA flight training",
  },
  title: `Discovery Flight | ${COMPANY_NAME}`,
  subTitle:
    "Take your first flight lesson with a Discovery Flight at Pitcairn Flight Academy. Fly with an instructor and take the controls.",
};

const ctaData = {
  title: "Define Your Mission. Reach the Majors.",
  description:
    "Your aviation journey begins with a single heading. Whether you are aiming for the airlines or mastering a new rating, we provide the roadmap and mentorship to get you there.",
  image: {
    src: "/src/assets/placeholder-dark-clouds-pitcairn-flight-academy-instrument-rating.webp",
    alt: "Training aircraft in flight",
  },
  primaryCTA: {
    text: "Schedule a Tour",
    href: "/contact",
  },
  secondaryCTA: {
    text: "Enroll Now",
    href: "/enroll",
  },
};

const metaProps = {
  siteTitle: `${COMPANY_NAME} | Discovery Flight Experience`,
  siteDescription: `Take your first flight lesson with a Discovery Flight at ${COMPANY_NAME}. Fly with an instructor and take the controls.`,
  siteKeywords: `${COMPANY_NAME}, discovery flight, intro flight lesson, first time flying, learn to fly Pennsylvania`,
};
---

<BaseLayout {...metaProps}>
  <Hero75 data={heroData} />
  <FormDiscoveryFlight />
  <LocationSection />
  <CTASectionWithGradientCover {...ctaData} />
</BaseLayout>
