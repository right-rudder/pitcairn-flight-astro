---

<BaseLayout {...metaProps}>
  <!-- Hero Section -->
  <section
    class="relative bg-linear-to-b from-gray-900 to-gray-800 text-white py-20 md:py-32"
  >
    <div class="absolute inset-0 opacity-20 overflow-hidden">
      <ImageComp
        src="/src/assets/mael-balland-QRQHIYyIlp8-unsplash.jpg"
        alt="Flight training financing"
        class="w-full h-full object-cover animate-slow-zoom"
      />
    </div>
    <div class="relative max-w-7xl mx-auto px-5 md:px-8 lg:px-12">
      <div class="max-w-4xl">
        <div class="inline-block mb-4">
          <span
            class="text-sm font-semibold text-muted-100 tracking-wider uppercase bg-muted-950/60 px-4 py-2 rounded-full"
            >Financing Options</span
          >
        </div>
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight"
        >
          Make Your Aviation Career Affordable
        </h1>
        <p class="text-xl md:text-2xl text-gray-300 leading-relaxed mb-10">
