---
import BaseLayout from "../layouts/BaseLayout.astro";
import ImageComp from "../components/ImageComp.astro";
import { PHONE_NUMBER } from "../data/consts";

const metaProps = {
  siteTitle: `${COMPANY_NAME} | Flight Training Financing Options`,
  siteDescription: `Learn about flight training financing options and payment solutions available at ${COMPANY_NAME}.`,
  siteKeywords: `${COMPANY_NAME}, flight training financing, pilot school loans, aviation financing`,
