---
import ImageComp from "../ImageComp.astro";

const placeholder =
  "/src/assets/placeholder-dark-clouds-pitcairn-flight-academy-instrument-rating.webp";

const regionalTours = [
  {
    title: "Pottstown Local",
    price: "$185",
    desc: "The perfect start. Take the controls for a flight around Heritage Field and the Schuylkill River valley.",
    features: [
      "40-min Flight Time",
      "Hands-on Experience",
      "Pre-flight Briefing",
      "Loggable Hours",
    ],
    image: {
      src: "/src/assets/facebook/pitcairn-flight-academy_pottstown-PA_pilot-training_vision-plane-good-points-of-reference.jpg",
      alt: "Vision plane with good points of reference at Pitcairn Flight Academy in Pottstown, PA",
    },
    tag: "Introductory",
  },
  {
    title: "Philly Skyline",
    price: "$275",
    desc: "Our most scenic route. Navigate toward Center City for an unforgettable view of the urban horizon.",
    features: [
      "75-min Flight Time",
      "Center City Orbit",
      "Advanced Briefing",
      "Instructor Guided",
    ],
    image: {
      src: "/src/assets/instagram/pitcairn-flight-academy_Philadelphia-PA_flight-training_cards and plane-Philadelphia-city-vision-from-plane-day.jpg",
      alt: "Cards and plane with Philadelphia city view from plane during day at Pitcairn Flight Academy in Philadelphia, PA",
    },
    tag: "Most Popular",
    popular: true,
  },
  {
    title: "Valley Forge",
    price: "$185",
    desc: "A historic journey. Combine flight training with aerial views of the National Park monuments.",
    features: [
      "40-min Flight Time",
      "Historic Landmarks",
      "Basic Navigation",
      "Photo Opportunities",
    ],
    image: {
      src: "/src/assets/facebook/pitcairn-flight-academy_pottstown-PA_pilot-training_plane-vision-clouds-sunset.jpg",
      alt: "Plane vision with clouds at sunset at Pitcairn Flight Academy in Pottstown, PA",
    },
    tag: "Scenic",
  },
];
---

<section class="py-32 bg-sky-950 text-white relative overflow-hidden">
  <div
    class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-sky-900/20 via-transparent to-transparent opacity-50"
  >
  </div>

  <div class="max-w-7xl mx-auto px-6 relative z-10 py-12">
    <div class="text-center max-w-3xl mx-auto mb-20 space-y-6">
      <div
        class="inline-flex items-center gap-2 px-3 py-1 rounded-2xl bg-sky-500/10 border border-sky-500/20 text-sky-400 text-[10px] font-black uppercase tracking-[0.2em]"
      >
        <span class="relative flex h-2 w-2">
          <span
            class="animate-ping absolute inline-flex h-full w-full rounded-2xl bg-sky-400 opacity-75"
          ></span>
          <span class="relative inline-flex rounded-2xl h-2 w-2 bg-sky-500"
          ></span>
        </span>
        Current Rates 2026
      </div>
      <h2
        class="text-5xl lg:text-7xl font-black uppercase tracking-tighter leading-none"
      >
        Discovery <span
          class="text-sky-500 italic underline underline-offset-8 decoration-1"
          >Lessons</span
        >
      </h2>
      <p class="text-slate-400 text-lg font-light tracking-wide">
        Your journey toward the cockpit begins with a single hour.
      </p>
    </div>

    <div class="grid lg:grid-cols-3 gap-8">
      {
        regionalTours.map((pkg) => (
          <div
            class={`group relative rounded-2xl  flex flex-col transition-all duration-700 hover:-translate-y-2 ${pkg.popular ? "bg-sky-800/80 scale-105 z-20 shadow-[0_0_50px_rgba(0,0,0,0.5)]" : "bg-sky-900/50 scale-100"}`}
          >
            <div class="relative rounded-2xl h-48 w-full overflow-hidden rounded-t-[2.5rem]">
              <ImageComp
                src={pkg.image.src}
                alt={pkg.image.alt}
                class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-slate-800 via-slate-800/20 to-transparent" />

              <div class="absolute top-6 left-6 px-4 py-1.5 bg-sky-500 rounded-2xl text-[10px] font-black uppercase tracking-widest shadow-lg shadow-sky-500/40">
                {pkg.tag}
              </div>
            </div>

            <div class="p-10 pt-6 flex flex-col flex-grow relative">
              <div class="absolute top-0 left-1/2 -translate-x-1/2 w-0 h-[2px] bg-sky-500 transition-all duration-500 group-hover:w-[80%]" />

              <h3 class="text-2xl font-black uppercase mb-1 tracking-tight group-hover:text-sky-400 transition-colors">
                {pkg.title}
              </h3>

              <div class="flex items-baseline gap-2 mb-6">
                <p class="text-4xl font-black text-white">{pkg.price}</p>
                <p class="text-slate-500 text-[10px] font-bold uppercase tracking-tighter italic">
                  / No hidden fees
                </p>
              </div>

              <p class="text-slate-400 text-sm leading-relaxed mb-8 font-light italic">
                "{pkg.desc}"
              </p>

              <ul class="space-y-4 mb-10">
                {pkg.features.map((f) => (
                  <li class="flex items-center gap-4 text-[10px] font-black uppercase tracking-widest text-slate-300 group/item">
                    <div class="flex h-6 w-6 items-center justify-center rounded-lg bg-sky-950 border border-white/5 transition-colors group-hover/item:border-sky-500 group-hover/item:shadow-[0_0_10px_rgba(14,165,233,0.3)]">
                      <svg
                        class="w-3 h-3 text-sky-500"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="3"
                          d="M5 13l4 4L19 7"
                        />
                      </svg>
                    </div>
                    {f}
                  </li>
                ))}
              </ul>

              <button
                class={`w-full py-5 font-black rounded-2xl uppercase tracking-[0.2em] text-[11px] transition-all relative overflow-hidden group-hover:shadow-[0_20px_40px_-10px_rgba(14,165,233,0.3)]
              ${pkg.popular ? "bg-sky-600 text-white hover:bg-sky-500" : "bg-white text-slate-900 hover:bg-sky-500 hover:text-white"}`}
              >
                <span class="relative z-10">Purchase Discovery Flight</span>
              </button>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
