---
import ImageComp from "../ImageComp.astro";

const placeholder =
  "/src/assets/placeholder-dark-clouds-pitcairn-flight-academy-instrument-rating.webp";

const regionalTours = [
  {
    title: "Pottstown Local Discovery",
    price: "$185",
    desc: "A short flight around the Pottstown area to get a feel for the sky. This introductory lesson is the ultimate first step for aspiring aviators.",
    features: [
      "Approx. 40-minute flight",
      "Hands-on flying",
      "Pre-flight briefing",
      "Loggable flight time",
    ],
    image: placeholder,
    reverse: false,
  },
  {
    title: "Philly Skyline Scenic",
    price: "$275",
    desc: "Experience breathtaking views of the Philadelphia skyline from 2,500 feet. This extended flight provides an in-depth introduction to cross-country navigation.",
    features: [
      "Approx. 75-minute flight",
      "Advanced maneuvers",
      "Extended briefings",
      "Center City skyline tour",
    ],
    image: placeholder,
    reverse: true,
  },
  {
    title: "Valley Forge Historic",
    price: "$185",
    desc: "Fly over the rolling hills of Valley Forge National Park. This route combines scenic beauty with a lesson on pilotage and ground reference maneuvers.",
    features: [
      "Approx. 40-minute flight",
      "Historic landmark views",
      "Pilot navigation intro",
      "Perfect for photography",
    ],
    image: placeholder,
    reverse: false,
  },
];
---

<section
  class="relative py-24 lg:py-32 bg-slate-950 text-white overflow-hidden"
>
  <div
    class="absolute top-0 left-1/4 w-96 h-96 bg-sky-500/10 blur-[120px] rounded-2xl"
  >
  </div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <div class="space-y-8">
        <div>
          <span
            class="inline-block px-4 py-1 rounded-2xl bg-sky-500/10 border border-sky-400/20 text-sky-400 text-xs font-bold uppercase tracking-widest mb-4"
          >
            Featured Experience
          </span>
          <h1
            class="text-6xl lg:text-8xl font-black uppercase leading-[0.85] tracking-tighter mb-6"
          >
            Philly <span class="text-sky-500 italic">Skyline</span><br /> Scenic Tour
          </h1>
          <p class="text-slate-400 text-lg leading-relaxed max-w-xl">
            Departing from Heritage Field, you'll take the controls under
            professional guidance, navigating over the Schuylkill River toward
            the brilliant Philadelphia skyline.
          </p>
        </div>

        <div class="flex items-center gap-8">
          <div>
            <p class="text-3xl font-black text-white">$275</p>
            <p
              class="text-slate-500 text-xs uppercase tracking-widest font-bold"
            >
              Starting Price
            </p>
          </div>
          <a
            href="#book"
            class="group relative px-8 py-4 bg-sky-600 font-bold rounded-xl overflow-hidden transition-all hover:bg-sky-500 hover:shadow-[0_0_30px_rgba(14,165,233,0.4)]"
          >
            <span class="relative z-10">Book Your Flight</span>
          </a>
        </div>

        <div class="grid grid-cols-2 gap-12 pt-8 border-t border-white/10">
          <div class="group">
            <h3
              class="font-black text-sm uppercase tracking-widest text-sky-400 mb-4 group-hover:translate-x-2 transition-transform italic"
            >
              // Features
            </h3>
            <ul class="text-sm space-y-3 text-slate-400 font-medium">
              <li class="flex items-center gap-2 italic">
                <span class="w-1 h-1 bg-sky-500 rounded-2xl"></span> Certified CFI
                Guidance
              </li>
              <li class="flex items-center gap-2 italic">
                <span class="w-1 h-1 bg-sky-500 rounded-2xl"></span> Hands-on pilotage
              </li>
              <li class="flex items-center gap-2 italic">
                <span class="w-1 h-1 bg-sky-500 rounded-2xl"></span> Pre/Post Briefings
              </li>
            </ul>
          </div>
          <div class="group">
            <h3
              class="font-black text-sm uppercase tracking-widest text-sky-400 mb-4 group-hover:translate-x-2 transition-transform italic"
            >
              // Highlights
            </h3>
            <ul class="text-sm space-y-3 text-slate-400 font-medium">
              <li class="flex items-center gap-2 italic">
                <span class="w-1 h-1 bg-sky-500 rounded-2xl"></span> Center City Views
              </li>
              <li class="flex items-center gap-2 italic">
                <span class="w-1 h-1 bg-sky-500 rounded-2xl"></span> Schuylkill Valley
              </li>
              <li class="flex items-center gap-2 italic">
                <span class="w-1 h-1 bg-sky-500 rounded-2xl"></span> Heritage Field
              </li>
            </ul>
          </div>
        </div>
      </div>

      <div class="group relative">
        <div
          class="absolute -inset-1 bg-gradient-to-r from-sky-600 to-slate-900 rounded-[2.5rem] blur opacity-25 group-hover:opacity-50 transition duration-1000"
        >
        </div>
        <div
          class="relative bg-slate-900 rounded-[2rem] p-4 border border-white/10 overflow-hidden shadow-2xl"
        >
          <div
            class="aspect-square relative overflow-hidden rounded-2xl group-hover:scale-[1.02] transition-transform duration-700"
          >
            <ImageComp
              src={placeholder}
              alt="Flight Path"
              class="w-full h-full object-cover opacity-40 group-hover:opacity-60 transition-opacity"
            />
            <div
              class="absolute inset-0 bg-gradient-to-br from-sky-500/20 to-transparent"
            >
            </div>
            <div
              class="absolute inset-0 flex flex-col items-center justify-center p-12 text-center"
            >
              <div
                class="w-16 h-16 border-2 border-sky-500/50 rounded-2xl flex items-center justify-center animate-pulse mb-4"
              >
                <div
                  class="w-2 h-2 bg-sky-500 rounded-2xl shadow-[0_0_15px_#0ea5e9]"
                >
                </div>
              </div>
              <p
                class="text-sky-400 font-mono text-xs uppercase tracking-[0.3em]"
              >
                Live Route Tracking
              </p>
              <p class="text-white font-black text-2xl uppercase mt-2">
                Visual Flight Path
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mt-20">
      {
        [1, 2, 3, 4].map(() => (
          <div class="relative h-48 rounded-2xl  overflow-hidden group cursor-crosshair shadow-lg">
            <ImageComp
              src={placeholder}
              alt="Gallery"
              class="w-full h-full object-cover transition-all duration-700 group-hover:scale-125 group-hover:rotate-3"
            />
            <div class="absolute inset-0 bg-sky-900/40 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
              <span class="text-white font-black uppercase text-xs tracking-widest border-b-2 border-white">
                View View
              </span>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<section class="py-32 bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto px-6 space-y-40">
    {
      regionalTours.map((tour) => (
        <div
          class={`flex flex-col lg:items-center gap-16 lg:gap-24 ${tour.reverse ? "lg:flex-row-reverse" : "lg:flex-row"}`}
        >
          <div class="lg:w-1/2 group relative">
            <div class="absolute -inset-4 bg-slate-100 rounded-[3rem] scale-95 group-hover:scale-100 transition-transform duration-700" />
            <div class="relative rounded-[2.5rem] overflow-hidden shadow-[0_30px_60px_-15px_rgba(0,0,0,0.3)] group-hover:-translate-y-4 transition-transform duration-700">
              <ImageComp
                src={tour.image}
                alt={tour.title}
                class="w-full h-[500px] object-cover group-hover:scale-110 transition-transform duration-1000"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-slate-900/60 to-transparent" />
            </div>
          </div>

          <div class="lg:w-1/2 space-y-6">
            <div class="flex items-baseline gap-4">
              <h2 class="text-4xl lg:text-5xl font-black uppercase text-slate-900 tracking-tighter leading-none">
                {tour.title}
              </h2>
              <span class="h-px flex-grow bg-slate-200" />
            </div>
            <p class="text-sky-600 font-black text-2xl tracking-tight">
              {tour.price}
            </p>
            <p class="text-slate-500 text-lg leading-relaxed">{tour.desc}</p>

            <ul class="grid grid-cols-1 sm:grid-cols-2 gap-4 pb-8">
              {tour.features.map((f) => (
                <li class="flex items-center gap-3 text-slate-800 font-bold text-sm uppercase tracking-tight group">
                  <div class="w-6 h-6 rounded-lg bg-sky-100 flex items-center justify-center group-hover:bg-sky-500 transition-colors">
                    <svg
                      class="w-3 h-3 text-sky-600 group-hover:text-white"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="3"
                        d="M5 13l4 4L19 7"
                      />
                    </svg>
                  </div>
                  {f}
                </li>
              ))}
            </ul>

            <a
              href="#book"
              class="inline-flex items-center gap-4 px-10 py-5 bg-slate-900 text-white font-black uppercase text-sm tracking-[0.2em] rounded-2xl  hover:bg-sky-600 transition-all hover:shadow-2xl hover:shadow-sky-600/40"
            >
              Secure This Lesson
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="3"
                  d="M17 8l4 4m0 0l-4 4m4-4H3"
                />
              </svg>
            </a>
          </div>
        </div>
      ))
    }
  </div>
</section>

<section class="py-32 bg-slate-900 text-white relative overflow-hidden">
  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <div class="text-center max-w-3xl mx-auto mb-20 space-y-4">
      <h2 class="text-5xl lg:text-7xl font-black uppercase tracking-tighter">
        Lesson <span class="text-sky-500 italic">Packages</span>
      </h2>
      <p class="text-slate-400 text-lg">
        Transparent pricing for your first loggable hours of flight training.
      </p>
    </div>

    <div class="grid lg:grid-cols-3 gap-8">
      {
        regionalTours.map((pkg) => (
          <div class="group relative bg-slate-800/50 backdrop-blur-xl p-10 rounded-[2.5rem] border border-white/5 flex flex-col hover:bg-slate-800 hover:-translate-y-4 transition-all duration-500">
            <div class="absolute top-0 right-10 w-12 h-1 bg-sky-500 opacity-0 group-hover:opacity-100 transition-opacity" />

            <h3 class="text-2xl font-black uppercase mb-2 tracking-tight">
              {pkg.title}
            </h3>
            <div class="flex items-baseline gap-2 mb-8">
              <p class="text-sky-400 font-black text-4xl">{pkg.price}</p>
              <p class="text-slate-500 text-xs font-bold uppercase tracking-widest">
                / session
              </p>
            </div>

            <p class="text-slate-400 text-sm leading-relaxed mb-8 flex-grow">
              {pkg.desc}
            </p>

            <ul class="space-y-4 mb-10">
              {pkg.features.map((f) => (
                <li class="flex items-center gap-3 text-xs font-bold uppercase tracking-widest text-slate-300">
                  <svg
                    class="w-4 h-4 text-sky-500"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  {f}
                </li>
              ))}
            </ul>

            <button class="w-full py-5 bg-white text-slate-900 font-black rounded-2xl  uppercase tracking-[0.2em] text-xs hover:bg-sky-500 hover:text-white transition-all shadow-xl group-hover:scale-[1.05]">
              Confirm Slot
            </button>
          </div>
        ))
      }
    </div>
  </div>
</section>
