---
import ImageComp from "../ImageComp.astro";

const placeholder =
  "/src/assets/placeholder-dark-clouds-pitcairn-flight-academy-instrument-rating.webp";

const image = {
  src: "/src/assets/instagram/pitcairn-flight-academy_Philadelphia-PA_flight-training_cards and plane-Philadelphia-city-vision-from-plane-day.jpg",
  alt: "Cards and plane with Philadelphia city view from plane during day at Pitcairn Flight Academy in Philadelphia, PA",
};

const images = [
  {
    src: "/src/assets/instagram/pitcairn-flight-academy_Philadelphia-PA_flight-training_cards and plane-Philadelphia-mountain-vision-wing.jpg",
    alt: "Cards and plane with Philadelphia mountain view from wing at Pitcairn Flight Academy in Philadelphia, PA",
  },
  {
    src: "/src/assets/instagram/pitcairn-flight-academy_Philadelphia-PA_flight-training_cards and plane-Philadelphia-city-vision-from-wing-at-night-2.jpg",
    alt: "Cards and plane with Philadelphia city view from wing at night at Pitcairn Flight Academy in Philadelphia, PA",
  },
  {
    src: "/src/assets/instagram/pitcairn-flight-academy_Philadelphia-PA_flight-training_cards and plane-Philadelphia-country-side-vision-from-wing.jpg",
    alt: "Cards and plane with Philadelphia countryside view from wing at Pitcairn Flight Academy in Philadelphia, PA",
  },
  {
    src: "/src/assets/instagram/pitcairn-flight-academy_Philadelphia-PA_flight-training_cards and plane-Philadelphia-city-vision-from-wing-at-night.jpg",
    alt: "Cards and plane with Philadelphia city view from wing at night at Pitcairn Flight Academy in Philadelphia, PA",
  },
];
---

<section class="relative py-24 lg:py-32 bg-sky-950 text-white overflow-hidden">
  <div
    class="absolute top-0 left-1/4 w-96 h-96 bg-sky-500/10 blur-[120px] rounded-full"
  >
  </div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <div class="space-y-8">
        <div>
          <span
            class="inline-block px-4 py-1 rounded-full bg-sky-500/10 border border-sky-400/20 text-sky-400 text-xs font-bold uppercase tracking-widest mb-4"
          >
            Featured Experience
          </span>
          <h1
            class="text-6xl lg:text-8xl font-black uppercase leading-[0.85] tracking-tighter mb-6"
          >
            Philly <span class="text-sky-500 italic">Skyline</span><br /> Scenic Tour
          </h1>
          <p class="text-slate-400 text-lg leading-relaxed max-w-xl">
            Departing from Heritage Field, you'll take the controls under
            professional guidance, navigating over the Schuylkill River toward
            the brilliant Philadelphia skyline.
          </p>
        </div>

        <div class="flex items-center gap-8">
          <div>
            <p class="text-3xl font-black text-white">$275</p>
            <p
              class="text-slate-500 text-xs uppercase tracking-widest font-bold"
            >
              Starting Price
            </p>
          </div>
          <a
            href="#book"
            class="group relative px-8 py-4 bg-sky-600 font-bold rounded-xl overflow-hidden transition-all hover:bg-sky-500 hover:shadow-[0_0_30px_rgba(14,165,233,0.4)]"
          >
            <span class="relative z-10">Book Your Flight</span>
          </a>
        </div>

        <div class="grid grid-cols-2 gap-12 pt-8 border-t border-white/10">
          <div class="group">
            <h3
              class="font-black text-sm uppercase tracking-widest text-sky-400 mb-4 group-hover:translate-x-2 transition-transform italic"
            >
              // Features
            </h3>
            <ul class="text-sm space-y-3 text-slate-400 font-medium">
              <li class="flex items-center gap-2 italic">
                <span class="w-1 h-1 bg-sky-500 rounded-full"></span> Certified CFI
                Guidance
              </li>
              <li class="flex items-center gap-2 italic">
                <span class="w-1 h-1 bg-sky-500 rounded-full"></span> Hands-on pilotage
              </li>
              <li class="flex items-center gap-2 italic">
                <span class="w-1 h-1 bg-sky-500 rounded-full"></span> Pre/Post Briefings
              </li>
            </ul>
          </div>
          <div class="group">
            <h3
              class="font-black text-sm uppercase tracking-widest text-sky-400 mb-4 group-hover:translate-x-2 transition-transform italic"
            >
              // Highlights
            </h3>
            <ul class="text-sm space-y-3 text-slate-400 font-medium">
              <li class="flex items-center gap-2 italic">
                <span class="w-1 h-1 bg-sky-500 rounded-full"></span> Center City
                Views
              </li>
              <li class="flex items-center gap-2 italic">
                <span class="w-1 h-1 bg-sky-500 rounded-full"></span> Schuylkill Valley
              </li>
              <li class="flex items-center gap-2 italic">
                <span class="w-1 h-1 bg-sky-500 rounded-full"></span> Heritage Field
              </li>
            </ul>
          </div>
        </div>
      </div>

      <div class="group relative">
        <div
          class="absolute -inset-1 bg-gradient-to-r from-sky-600 to-slate-900 rounded-[2.5rem] blur opacity-25 group-hover:opacity-50 transition duration-1000"
        >
        </div>
        <div
          class="relative bg-sky-900 rounded-[2rem] p-4 border border-white/10 overflow-hidden shadow-2xl"
        >
          <div
            class="aspect-square relative overflow-hidden rounded-2xl group-hover:scale-[1.02] transition-transform duration-700"
          >
            <ImageComp
              src={image.src}
              alt={image.alt}
              class="w-full h-full object-cover opacity-40 group-hover:opacity-60 transition-opacity"
            />
            <div
              class="absolute inset-0 bg-gradient-to-br from-sky-500/20 to-transparent"
            >
            </div>
            <div
              class="absolute inset-0 flex flex-col items-center justify-center p-12 text-center"
            >
              <div
                class="w-16 h-16 border-2 border-sky-500/50 rounded-full flex items-center justify-center animate-pulse mb-4"
              >
                <div
                  class="w-2 h-2 bg-sky-500 rounded-full shadow-[0_0_15px_#0ea5e9]"
                >
                </div>
              </div>
              <p
                class="text-sky-400 font-mono text-xs uppercase tracking-[0.3em]"
              >
                Live Route Tracking
              </p>
              <p class="text-white font-black text-2xl uppercase mt-2">
                Visual Flight Path
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mt-20">
      {
        images.map((image) => (
          <div class="relative h-48 rounded-2xl overflow-hidden group cursor-crosshair shadow-lg">
            <ImageComp
              src={image.src}
              alt={image.alt}
              class="w-full h-full object-cover transition-all duration-700 group-hover:scale-125 group-hover:rotate-3"
            />
            <div class="absolute inset-0 bg-sky-900/40 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
              <span class="text-white font-black uppercase text-xs tracking-widest border-b-2 border-white">
                View View
              </span>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
