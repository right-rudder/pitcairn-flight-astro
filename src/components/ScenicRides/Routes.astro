---
import ImageComp from "../../components/ImageComp.astro";
import { COMPANY_NAME } from "../../data/consts";

const experiences = [
  {
    type: "Discovery Flight",
    title: "The Hands-On Experience",
    description:
      "Take the controls under the guidance of a CFI. This isn't just a rideâ€”it's your first loggable hour of flight training.",
    price: "From $199",
    features: [
      "Pre-flight Briefing",
      "30-60 Min Flight Time",
      "Logbook Entry Included",
    ],
    image: {
      src: "/src/assets/instagram/pitcairn-flight-academy_Philadelphia-PA_flight-training_pilots-inside-plane-talking.jpg",
      alt: "Pilots inside plane talking at Pitcairn Flight Academy in Philadelphia, PA flight training",
    },
    cta: "Book Discovery Flight",
    url: "/enroll",
    theme: "sky",
  },
  {
    type: "Scenic Tour",
    title: "Pottstown From Above",
    description:
      "Relax and enjoy the view. We'll fly you over Heritage Field, the Schuylkill River, and local landmarks.",
    price: "Custom Quotes",
    features: [
      "Up to 3 Passengers",
      "Customized Route",
      "Perfect for Photography",
    ],
    image: {
      src: "/src/assets/facebook/pitcairn-flight-academy_pottstown-PA_pilot-training_plane-flying-country-side.jpg",
      alt: "Plane flying over countryside at Pitcairn Flight Academy in Pottstown, PA pilot training",
    },
    cta: "Schedule Scenic Ride",
    url: "/contact",
    theme: "slate",
  },
];
---

<section class="py-24 lg:py-40 bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto px-6">
    <div class="max-w-4xl mb-16 lg:mb-24">
      <span
        class="text-sky-600 font-bold text-sm lg:text-base uppercase tracking-[0.3em] mb-4 block"
        >Heritage Field Airport (PTW)</span
      >
      <h2
        class="text-5xl lg:text-8xl font-black text-slate-900 leading-[0.9] tracking-tighter mb-8"
      >
        Experience <br /><span class="text-sky-600 italic">Pottstown</span> From Above.
      </h2>
      <p class="text-xl lg:text-2xl text-slate-500 font-light max-w-2xl">
        Whether you're looking to start a career or celebrate a special moment,
        our local flights offer a perspective you can't find anywhere else.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">
      {
        experiences.map((item) => (
          <div class="group relative flex flex-col h-full bg-slate-50 rounded-[3rem] overflow-hidden border border-slate-100 transition-all duration-500 hover:shadow-2xl hover:shadow-sky-500/10 hover:-translate-y-2">
            <div class="relative h-[300px] lg:h-[400px] overflow-hidden">
              <ImageComp
                src={item.image.src}
                alt={item.image.alt}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-slate-950/80 via-transparent to-transparent" />
              <div class="absolute bottom-8 left-8">
                <span class="px-4 py-1.5 bg-white/10 backdrop-blur-md border border-white/20 rounded-2xl text-white text-xs font-bold uppercase tracking-widest">
                  {item.type}
                </span>
              </div>
            </div>

            <div class="p-8 lg:p-12 flex flex-col flex-grow">
              <div class="flex justify-between items-start mb-6">
                <h3 class="text-3xl lg:text-4xl font-black text-slate-900 tracking-tight">
                  {item.title}
                </h3>
                <span class="text-sky-600 font-black text-xl">
                  {item.price}
                </span>
              </div>

              <p class="text-slate-600 text-lg leading-relaxed mb-8 flex-grow">
                {item.description}
              </p>

              <ul class="space-y-4 mb-10">
                {item.features.map((feature) => (
                  <li class="flex items-center gap-3 text-slate-700 font-medium">
                    <svg
                      class="w-5 h-5 text-sky-500"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"
                      />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>

              <a
                href={item.url}
                class={`w-full py-5 rounded-2xl text-center font-black transition-all duration-300 ${
                  item.theme === "sky"
                    ? "bg-sky-600 text-white hover:bg-sky-700 shadow-xl shadow-sky-600/20"
                    : "bg-slate-900 text-white hover:bg-slate-800 shadow-xl shadow-slate-900/20"
                }`}
              >
                {item.cta}
              </a>
            </div>
          </div>
        ))
      }
    </div>

    <div
      class="mt-16 py-8 border-t border-slate-100 flex flex-col md:flex-row justify-between items-center gap-6"
    >
      <div class="flex items-center gap-4">
        <div
          class="w-12 h-12 bg-sky-100 rounded-2xl flex items-center justify-center text-sky-600"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
            ></path><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg
          >
        </div>
        <p class="text-slate-600 font-medium">
          Flying from Heritage Field (PTW) <br />
          <span class="text-slate-400 text-sm">Pottstown, Pennsylvania</span>
        </p>
      </div>
      <div class="flex gap-4">
        <a
          href="https://facebook.com"
          class="w-10 h-10 rounded-2xl border border-slate-200 flex items-center justify-center text-slate-400 hover:text-sky-600 hover:border-sky-600 transition-all"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
            ><path
              d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"
            ></path></svg
          >
        </a>
        <a
          href="https://google.com"
          class="w-10 h-10 rounded-2xl border border-slate-200 flex items-center justify-center text-slate-400 hover:text-sky-600 hover:border-sky-600 transition-all"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
            ><path
              d="M12.48 10.92v3.28h7.84c-.24 1.84-.9 3.34-2.12 4.4a8.12 8.12 0 01-11.4 0 8.12 8.12 0 010-11.4 8.12 8.12 0 0111.4 0c1.2 1.06 1.88 2.56 2.12 4.4h-3.28z"
            ></path></svg
          >
        </a>
      </div>
    </div>
  </div>
</section>
