---
import type { CollectionEntry } from "astro:content";
import ImageComp from "../ImageComp.astro";
import { FaClock, FaTag, FaArrowRight } from "react-icons/fa";

interface Props {
  program: CollectionEntry<"programs">;
  index: number;
}

const { program, index } = Astro.props;

const duration = program.data.programIntroduction?.highlights?.find(
  (h) =>
    h.highlightName.toLowerCase().includes("duration") ||
    h.highlightName.toLowerCase().includes("timeline")
)?.highlightValue;
const cost = program.data.programIntroduction?.highlights?.find(
  (h) =>
    h.highlightName.toLowerCase().includes("cost") ||
    h.highlightName.toLowerCase().includes("price")
)?.highlightValue;
---

<article
  class="program-card group rounded-3xl relative flex flex-col bg-slate-50 shadow-md hover:shadow-2xl hover:shadow-slate-950/10 transition-all duration-700 ease-out overflow-hidden border-b-0 border-x border-t-4 border-muted-200 hover:border-t-sky-600 hover:-translate-y-2 opacity-0 translate-y-8"
  style={`transition-delay: ${index * 150}ms`}
>
  <div class="relative h-72 overflow-hidden bg-sky-950">
    <ImageComp
      src={program.data.image}
      alt={program.data.alt || program.data.title}
      class="w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-110 opacity-90 group-hover:opacity-100"
    />

    <div
      class="absolute inset-0 bg-gradient-to-t from-slate-950/80 to-transparent opacity-60"
    >
    </div>

    <div
      class="absolute bottom-6 left-6 right-6 flex justify-between items-end"
    >
      {
        duration && (
          <div class="flex items-center gap-2 bg-sky-950/80 backdrop-blur-md text-white text-xs font-bold px-3 py-1.5 rounded-sm uppercase tracking-wide">
            <FaClock className="text-sky-500" />
            {duration}
          </div>
        )
      }
      {
        cost && (
          <div class="flex items-center gap-2 bg-white/95 backdrop-blur-md text-slate-950 text-xs font-black px-3 py-1.5 rounded-sm shadow-lg">
            <FaTag className="text-sky-600" />
            {cost}
          </div>
        )
      }
    </div>
  </div>

  <div class="p-8 flex flex-col flex-1">
    <h3
      class="text-2xl font-title font-bold text-slate-950 mb-3 group-hover:text-sky-600 transition-colors duration-300"
    >
      {program.data.title}
    </h3>

    <p class="text-slate-600 text-sm leading-relaxed mb-8 flex-1 line-clamp-3">
      {program.data.description}
    </p>

    <a
      class="relative hover:cursor-pointer w-full inline-flex items-center justify-center gap-3 px-6 py-4 font-bold text-sm tracking-wider uppercase text-slate-50 bg-sky-950 rounded-sm overflow-hidden transition-all duration-300 group-hover:bg-sky-600 group-hover:text-white"
    >
      <span class="relative z-10">View Program Details</span>
      <FaArrowRight
        className="relative z-10 text-sky-600 group-hover:text-white transition-transform duration-300 group-hover:translate-x-1"
      />
    </a>
  </div>
</article>
