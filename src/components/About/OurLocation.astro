---
import ImageComp from "../ImageComp.astro";
import { COMPANY_NAME } from "../../data/consts";

const ourLocation = {
  upperHeading: "Our Training Base",
  title: "Located at Wayne Executive Jetport",
  descriptions: [
    `<strong>${COMPANY_NAME}</strong> operates out of <strong>Wayne Executive Jetport (KGWW)</strong> in Goldsboro, North Carolina.`,
    `This location supports a focused training environment designed for students pursuing professional pilot careers.`,
  ],
  features: [
    "Part 141 environment supporting full-time professional pilot training",
    "Towered airport operations for professional ATC communications mastery",
    "Consistent training conditions for primary and advanced instruction",
    "Program housing available for Professional Airline Pilot Track students",
    "Central North Carolina location supporting regional students",
  ],
  image: {
    src: "/src/assets/placeholder-dark-clouds-pitcairn-flight-academy-instrument-rating.webp",
    alt: "Wayne Executive Jetport (KGWW)",
  },
};

const { content = ourLocation } = Astro.props;
---

<section class="py-24 md:py-32 bg-white relative overflow-hidden">
  <div class="max-w-7xl mx-auto px-6 md:px-12 relative z-10">
    <div class="grid lg:grid-cols-2 gap-16 lg:gap-24 items-center">
      <div class="order-2 lg:order-1">
        {
          content.upperHeading && (
            <div class="flex items-center gap-3 mb-6">
              <span class="w-8 h-px bg-sky-500" />
              <span class="text-sky-600 font-bold uppercase tracking-[0.2em] text-xs">
                {content.upperHeading}
              </span>
            </div>
          )
        }

        <h2
          class="text-4xl md:text-5xl font-bold text-slate-900 mb-8 tracking-tight leading-tight"
        >
          {content.title}
        </h2>

        <div class="space-y-6 text-lg text-slate-600 leading-relaxed mb-10">
          {
            content.descriptions.map((desc: string) => (
              <p
                class="[&>strong]:text-slate-950 [&>strong]:font-bold"
                set:html={desc}
              />
            ))
          }
        </div>

        <div class="space-y-4">
          {
            content.features.map((feature: any) => (
              <div class="group flex items-start gap-4 p-3 rounded-xl hover:bg-sky-50 transition-colors duration-300">
                <div class="mt-1 shrink-0 w-6 h-6 rounded-full bg-sky-100 flex items-center justify-center group-hover:bg-sky-600 transition-colors duration-300">
                  <svg
                    class="w-4 h-4 text-sky-600 group-hover:text-white transition-colors duration-300"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="3"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                </div>
                <p class="text-slate-700 font-medium leading-snug">{feature}</p>
              </div>
            ))
          }
        </div>
      </div>

      <div class="order-1 lg:order-2 relative">
        <div class="relative group">
          <div
            class="absolute -inset-4 border border-slate-100 rounded-[2.5rem] pointer-events-none group-hover:border-sky-100 transition-colors duration-500"
          >
          </div>

          <div class="relative overflow-hidden rounded-[2rem] shadow-2xl">
            <ImageComp
              src={content.image.src}
              alt={content.image.alt}
              class="w-full aspect-[4/5] object-cover transition-transform duration-700 group-hover:scale-110"
            />

            <div
              class="absolute bottom-6 left-6 right-6 p-6 bg-white/90 backdrop-blur-md rounded-2xl shadow-xl flex items-center justify-between border border-white/20"
            >
              <div>
                <p
                  class="text-[10px] font-bold text-sky-600 uppercase tracking-widest mb-1"
                >
                  Airport ID
                </p>
                <p class="text-2xl font-black text-slate-900">KGWW</p>
              </div>
              <div class="text-right">
                <p
                  class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-1"
                >
                  Coordinates
                </p>
                <p class="text-xs font-mono text-slate-600 font-bold uppercase">
                  35.4608° N, 77.9622° W
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
