---
const ourAdvantages = {
  upperHeading: "Why Choose Us",
  title: "What Sets Us Apart",
  description:
    "At Pitcairn Flight Academy, we focus on personalized instruction, real-world flying experience, and building confident, safety-focused pilots.",
  items: [
    {
      title: "Personalized, Student-Focused Training",
      description:
        "We tailor instruction to each student’s goals and learning style. Whether you're flying for fun or pursuing a career in aviation, our instructors adapt training to help you succeed.",
      icon: "user",
    },
    {
      title: "Experienced, Dedicated Instructors",
      description:
        "Our instructors bring years of real-world flying and teaching experience, ensuring students receive consistent, high-quality instruction built on strong fundamentals and sound judgment.",
      icon: "check",
    },
    {
      title: "Home Base at Heritage Field (KPTW)",
      description:
        "All training is based at Heritage Field Airport in Pottstown, Pennsylvania—an ideal environment with uncongested airspace, diverse operations, and easy access to more complex airspace as skills advance.",
      icon: "location",
    },
    {
      title: "Real-World Weather and Airspace Exposure",
      description:
        "Students gain hands-on experience flying in varied weather conditions and airspace typical of the Northeast, building confidence and decision-making skills that translate directly to real-world flying.",
      icon: "cloud",
    },
    {
      title: "Supportive Training Environment",
      description:
        "From day one, students are part of a welcoming aviation community. Our team works closely together to provide guidance, mentorship, and encouragement throughout every stage of training.",
      icon: "shield",
    },
    {
      title: "Training for a Lifetime of Flying",
      description:
        "We emphasize safe habits, strong aeronautical decision-making, and professionalism—preparing students not just for checkrides, but for a lifetime of confident, responsible flying.",
      icon: "bolt",
    },
  ],
};

const { content = ourAdvantages } = Astro.props;
---

<section class="py-24 bg-slate-50 relative overflow-hidden">
  <div
    class="absolute -top-24 -right-24 w-96 h-96 bg-sky-100/50 rounded-2xl blur-3xl pointer-events-none"
  >
  </div>

  <div class="max-w-7xl mx-auto px-6 md:px-12 relative z-10">
    <div class="text-center mb-20">
      {
        content.upperHeading && (
          <span class="inline-block py-1 px-4 bg-sky-100 text-sky-700 text-xs font-bold tracking-[0.2em] uppercase rounded-2xlmb-4">
            {content.upperHeading}
          </span>
        )
      }
      <h2
        class="text-4xl md:text-5xl font-bold text-slate-900 mb-6 tracking-tight"
      >
        {content.title}
      </h2>
      <p class="text-xl text-slate-600 max-w-2xl mx-auto font-light">
        {content.description}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-10">
      {
        content.items.map((item: any) => (
          <div class="group flex flex-col sm:flex-row gap-6 p-6 rounded-2xl border border-transparent hover:border-sky-200 hover:bg-white hover:shadow-xl hover:shadow-sky-100/50 transition-all duration-300">
            <div class="shrink-0">
              <div class="w-14 h-14 bg-sky-600 rounded-xl flex items-center justify-center shadow-lg shadow-sky-200 group-hover:scale-110 group-hover:rotate-3 transition-transform duration-300">
                <svg
                  class="w-7 h-7 text-white"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                  />
                </svg>
              </div>
            </div>

            <div>
              <h3 class="text-xl font-bold text-slate-900 mb-3 group-hover:text-sky-700 transition-colors">
                {item.title}
              </h3>
              <p class="text-slate-600 leading-relaxed text-sm md:text-base">
                {item.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>

    <div
      class="mt-20 p-8 bg-sky-900 rounded-2xl text-center relative overflow-hidden shadow-2xl"
    >
      <div class="absolute inset-0 opacity-10">
        <svg
          class="w-full h-full"
          viewBox="0 0 100 100"
          preserveAspectRatio="none"
        >
          <path d="M0 100 C 20 0 50 0 100 100 Z" fill="white"></path>
        </svg>
      </div>
      <p class="relative z-10 text-white text-lg md:text-xl font-medium">
        Ready to train with the best? <a
          href="/enroll"
          class="underline decoration-sky-400 underline-offset-4 hover:text-sky-300 transition-colors ml-2"
          >Secure your spot today.</a
        >
      </p>
    </div>
  </div>
</section>
