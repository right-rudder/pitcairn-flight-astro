---
import { COMPANY_NAME, PHONE_NUMBER } from "../../data/consts";
import ImageComp from "../ImageComp.astro";

const ctaSection = {
  title: "Ready to Start Your Aviation Journey?",
  description: `Join students who’ve learned to fly with ${COMPANY_NAME} at Heritage Field Airport. Whether you’re flying for fun or pursuing a professional path, our experienced instructors will guide you every step of the way.`,
  backgroundImage: {
    src: "/src/assets/placeholder-dark-clouds-pitcairn-flight-academy-instrument-rating.webp",
    alt: "Call to action background",
  },
  primaryCta: {
    url: "/programs",
    text: "Explore Programs",
  },
  secondaryCta: {
    url: `tel:${PHONE_NUMBER}`,
    text: "Speak with an Instructor",
  },
};

const { content = ctaSection } = Astro.props;
---

<section class="relative py-24 md:py-32 overflow-hidden bg-sky-950">
  <div class="absolute inset-0 z-0">
    <ImageComp
      src={content.backgroundImage.src}
      alt={content.backgroundImage.alt}
      class="w-full h-full object-cover opacity-30 mix-blend-overlay scale-105"
    />
    <div
      class="absolute inset-0 bg-linear-to-r from-sky-950 via-sky-950/80 to-sky-950/40"
    >
    </div>
    <div class="absolute inset-0 bg-linear-to-t from-sky-950 to-transparent">
    </div>
  </div>

  <div
    class="absolute top-0 left-0 w-full h-px bg-linear-to-r from-transparent via-sky-500/50 to-transparent"
  >
  </div>

  <div class="max-w-5xl mx-auto px-6 relative z-10">
    <div class="flex flex-col items-center text-center">
      <span
        class="inline-flex items-center gap-2 py-1 px-4 rounded-full bg-sky-500/10 border border-sky-500/20 text-sky-400 text-base font-bold tracking-[0.3em] uppercase mb-8"
      >
        <!-- Ping Effect -->
        <span class="relative flex h-4 w-4">
          <span
            class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"
          ></span>
          <span class="relative inline-flex rounded-full h-4 w-4 bg-green-500"
          ></span>
        </span>
        Enrolling Now
      </span>

      <h2
        class="text-4xl md:text-6xl font-bold text-white mb-8 tracking-tight max-w-3xl leading-tight"
      >
        {content.title}
      </h2>

      <p class="text-xl text-sky-300 mb-12 max-w-2xl leading-relaxed">
        {content.description}
      </p>

      <div
        class="flex flex-col sm:flex-row gap-6 w-full sm:w-auto items-center"
      >
        <a
          href={content.primaryCta.url}
          class="group relative w-full sm:w-auto inline-flex items-center justify-center px-10 py-5 bg-sky-600 text-white font-bold rounded-full overflow-hidden transition-all duration-300 hover:bg-sky-500 hover:shadow-[0_0_30px_rgba(14,165,233,0.4)] hover:-transky-y-1"
        >
          <span class="relative z-10">{content.primaryCta.text}</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 h-5 ml-2 transition-transform duration-300 group-hover:transky-x-1"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2.5"
              d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>

        <a
          href={content.secondaryCta.url}
          class="w-full sm:w-auto inline-flex items-center justify-center px-10 py-5 bg-white/5 backdrop-blur-md border border-white/10 text-white font-bold rounded-full hover:bg-white/10 transition-all duration-300 active:scale-95"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 h-5 mr-2 text-sky-400"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path
              d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"
            ></path>
          </svg>
          {content.secondaryCta.text}
        </a>
      </div>

      <p class="mt-12 text-sky-500 text-sm font-medium tracking-wide">
        No commitment required • Free career consultation
      </p>
    </div>
  </div>
</section>
