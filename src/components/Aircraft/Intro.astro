---
import ImageComp from "../ImageComp.astro";
import { COMPANY_NAME, PHONE_NUMBER } from "../../data/consts";

const rentalData = {
  upperHeading: "Heritage Field (KPTW)",
  title: "Aircraft Rental at Pitcairn Flight Academy",
  subtitle: "We're the best known secret in the Philadelphia area.",
  description:
    "Experience the freedom of Heritage Field with our meticulously maintained fleet. Whether you're building hours for the airlines or flying for the joy of it, our rental process is streamlined for the professional pilot.",
  steps: [
    {
      id: "01",
      title: "Initial Contact",
      text: "Stop by Heritage Field or give us a call. Weâ€™ll discuss your goals and schedule your aircraft checkout with one of our instructors.",
    },
    {
      id: "02",
      title: "Digital Integration",
      text: "Submit your credentials via our secure portal and get instantly connected to our fleet through Flight Schedule Pro.",
    },
    {
      id: "03",
      title: "Cleared for Takeoff",
      text: "Complete a one-time proficiency checkout with an instructor to ensure safety, and then the sky is yours.",
    },
  ],
};
---

<section class="relative py-24 md:py-32 bg-sky-950 overflow-hidden">
  <div class="absolute inset-0 z-0 -top-200 opacity-40">
    <ImageComp
      src="/src/assets/old-website/pitcairn-2-planes.webp"
      alt="Two planes at Pitcairn Flight Academy"
      class="w-full h-full object-cover object-[50%_50%]"
    />
    <div
      class="absolute inset-0 bg-linear-to-b from-sky-950 via-sky-950/30 to-sky-950"
    >
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <div class="max-w-3xl">
      <span
        class="inline-block py-1 px-4 bg-sky-500/10 border border-sky-500/20 text-sky-400 text-xs font-bold tracking-[0.3em] uppercase rounded mb-6"
      >
        {rentalData.upperHeading}
      </span>
      <h1 class="text-4xl md:text-6xl font-black text-white mb-6 leading-[1.1]">
        {rentalData.title}
      </h1>
      <p class="text-xl md:text-2xl text-sky-200 font-medium mb-8 italic">
        "{rentalData.subtitle}"
      </p>

      <div class="flex flex-wrap gap-4">
        <a
          href="/contact"
          class="px-8 py-4 bg-sky-600 text-white font-bold rounded-full hover:bg-sky-500 transition-all shadow-xl shadow-sky-600/20"
        >
          Contact Us
        </a>
        <a
          href="#how-it-works"
          class="px-8 py-4 bg-white/5 backdrop-blur-md border border-white/10 text-white font-bold rounded-full hover:bg-white/10 transition-all"
        >
          Learn More
        </a>
      </div>
    </div>
  </div>
</section>

<section id="how-it-works" class="py-24 bg-white relative">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-5xl font-bold text-sky-900 mb-4">
        How to Start Renting
      </h2>
      <p class="text-sky-500 font-medium">
        Get in the air in three professional steps.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 relative">
      <div
        class="hidden md:block absolute top-1/4 left-0 w-full h-px bg-sky-100 -z-10"
      >
      </div>

      {
        rentalData.steps.map((step) => (
          <div class="group relative bg-sky-50 p-8 rounded-[2rem] border border-sky-100 hover:bg-white hover:shadow-2xl hover:shadow-sky-100 transition-all duration-500">
            <div class="flex flex-col items-center text-center">
              <div class="w-16 h-16 bg-white rounded-2xl shadow-sm flex items-center justify-center mb-6 group-hover:bg-sky-600 group-hover:rotate-6 transition-all duration-300">
                <span class="text-2xl font-black text-sky-600 group-hover:text-white transition-colors">
                  {step.id}
                </span>
              </div>

              <h3 class="text-xl font-bold text-sky-900 mb-4">{step.title}</h3>
              <p class="text-sky-600 leading-relaxed">{step.text}</p>
            </div>

            <div class="absolute bottom-0 left-1/2 -transky-x-1/2 w-0 h-1 bg-sky-600 group-hover:w-1/3 transition-all duration-500 rounded-t-full" />
          </div>
        ))
      }
    </div>

    <div class="mt-20 flex flex-col items-center">
      <div
        class="p-1 px-4 bg-sky-100 rounded-full text-xs font-bold text-sky-500 flex items-center gap-2 mb-6 uppercase tracking-widest"
      >
        <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
        Fleet Status: Online & Scheduling
      </div>
      <p
        class="text-sky-400 text-sm max-w-lg text-center leading-relaxed italic"
      >
        Pitcairn Flight Academy uses <span class="font-bold text-sky-900"
          >Flight Schedule Pro</span
        > for all aircraft management. Access to Heritage Field (KPTW) hangar facilities
        included with rental checkouts.
      </p>
    </div>
  </div>
</section>
