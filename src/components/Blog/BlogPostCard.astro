---
import ImageComp from "../ImageComp.astro";
import ImageWithZoomEffect from "../ProgramSlug/ImageWithZoomEffect.astro";

const companyLogo = "/src/assets/brand/pitcairn-flight-academy-logo-white.png";

const postPlaceholder = {
  slug: "example-post",
  data: {
    image: "/src/assets/crew/team-member-placeholder.jpg",
    title: "Placeholder Title",
    pubDate: new Date(),
    author: "Placeholder Author",
    description: "Placeholder description text for preview.",
    tags: ["tag-one", "tag-two"],
  },
};

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  }).format(date);
};

const { post = postPlaceholder, isHighlight = false } = Astro.props;
---

<article
  class="bg-muted-50 shadow-lg rounded-2xl transition-all duration-300 hover:shadow-2xl hover:-translate-y-1 flex flex-col h-full"
>
  <figure>
    {
      post.data.image && (
        <ImageWithZoomEffect
          src={post.data.image}
          alt={post.data.title}
          class={`w-full ${isHighlight ? "aspect-square lg:aspect-video lg:max-h-[40vh]" : "aspect-square"} object-cover rounded-t-lg`}
        />
      )
    }
  </figure>

  <div
    class="p-6 flex flex-col justify-between lg:min-h-[24rem] gap-3 relative flex-grow"
  >
    {
      post.data.tags && post.data.tags.length > 0 && (
        <div class="absolute -top-12 left-4 flex flex-wrap gap-1">
          {post.data.tags.map((tag: any) => (
            <span class=" text-white border-[1.5px]  text-xs px-3 py-1 rounded-2xl ">
              {tag}
            </span>
          ))}
        </div>
      )
    }

    <div class="flex items-center gap-3 text-sm text-black border-b pb-6">
      <div
        class={`${isHighlight ? "p-3" : "p-2"} rounded-2xl  flex items-center justify-center border-2 `}
      >
        <ImageComp
          class={`${isHighlight ? "w-6" : "w-4"}`}
          src={companyLogo}
          alt=" logo"
        />
      </div>
      <span>{post.data.author}</span>
      <span>|</span>
      <time datetime={post.data.pubDate.toISOString()}>
        {formatDate(post.data.pubDate)}
      </time>
    </div>

    <div class="flex flex-col flex-grow">
      <h2 class="block text-2xl font-bold my-3">
        <a
          href={`/blog/${post.slug}`}
          class={`${isHighlight ? "!text-2xl md:!text-4xl" : "!text-2xl"} title   transition-colors`}
        >
          {post.data.title}
        </a>
      </h2>

      <p class="block sans text-black line-clamp-3">
        {post.data.description}
      </p>
    </div>

    <div
      class={`${isHighlight ? "justify-start" : "justify-end"} flex w-full mt-auto`}
    >
      <a
        href={`/blog/${post.slug}`}
        class={`${isHighlight ? "btn-primary block" : "btn-primary max-w-32 block w-full"}`}
      >
        Read More
      </a>
    </div>
  </div>
</article>
