---
import ImageComp from "../ImageComp.astro";

interface Props {
  data: {
    mainImage?: string;
    imagePosition?: string; // e.g., "object-center" or "object-top"
    title?: string;
    upperheader?: string;
    descriptionParagraphs?: string[];
    mainButtonText?: string;
    mainButtonLink?: string;
    secondButtonText?: string;
    secondButtonLink?: string;
  };
}

const { data } = Astro.props;
---

<section
  class="relative py-28 md:py-36 px-6 overflow-hidden flex items-center min-h-[60vh]"
>
  <div class="absolute inset-0 z-0">
    {
      data.mainImage && (
        <ImageComp
          src={data.mainImage}
          alt={data.title || "Flight Academy"}
          class={`w-full h-full object-cover ${data.imagePosition || "object-center"}`}
        />
      )
    }
    <div
      class="absolute inset-0 bg-slate-950/60 transition-opacity duration-500"
    >
    </div>
    <div
      class="absolute inset-0 bg-gradient-to-t from-slate-950 via-slate-900/40 to-transparent"
    >
    </div>
  </div>

  <div
    class="relative z-10 max-w-5xl mx-auto text-center flex flex-col items-center"
  >
    {
      data.upperheader && (
        <span class="inline-block py-1 px-4 bg-sky-500 text-white text-xs font-bold tracking-[0.3em] uppercase rounded-2xl mb-6 shadow-lg shadow-sky-500/20">
          {data.upperheader}
        </span>
      )
    }

    {
      data.title && (
        <h2 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-8 tracking-tight leading-[1.1]">
          {data.title}
        </h2>
      )
    }

    <div class="space-y-4 max-w-2xl mx-auto">
      {
        data.descriptionParagraphs?.map((p) => (
          <p
            class="text-lg md:text-xl text-slate-200 leading-relaxed font-medium"
            set:html={p}
          />
        ))
      }
    </div>

    <div
      class="flex flex-col sm:flex-row justify-center items-center gap-5 mt-12"
    >
      {
        data.mainButtonText && (
          <a
            href={data.mainButtonLink || "/enroll"}
            class="w-full sm:w-auto px-10 py-4 bg-sky-600 hover:bg-sky-500 text-white font-bold rounded-2xl transition-all duration-300 shadow-xl shadow-sky-900/40 hover:-translate-y-1 active:scale-95"
          >
            {data.mainButtonText}
          </a>
        )
      }

      {
        data.secondButtonText && (
          <a
            href={data.secondButtonLink || "/contact"}
            class="w-full sm:w-auto px-10 py-4 bg-white/10 backdrop-blur-md border border-white/20 hover:bg-white/20 text-white font-bold rounded-2xl transition-all duration-300 active:scale-95"
          >
            {data.secondButtonText}
          </a>
        )
      }
    </div>
  </div>

  <div
    class="absolute bottom-0 left-0 w-full h-24 bg-gradient-to-t from-white to-transparent opacity-10"
  >
  </div>
</section>
