---
import ImageComp from '../ImageComp.astro';

interface Props {
  data: {
    mainImage?: string;
    imagePosition?: string;
    title?: string;
    upperheader?: string;
    descriptionParagraphs?: string[];
    mainButtonText?: string;
    mainButtonLink?: string;
    secondButtonText?: string;
    secondButtonLink?: string;
  };
}

const { data } = Astro.props;
---

<section class="relative py-24 px-4 overflow-hidden">
  <div class="absolute inset-0 z-0">
    {data.mainImage && (
      <ImageComp 
        src={data.mainImage} 
        alt={data.title || ""} 
        class={`w-full h-full object-cover ${data.imagePosition || ""}`} 
      />
    )}
    <div class="absolute inset-0 bg-gradient-to-r from-gray-900 to-gray-900/70"></div>
  </div>

  <div class="relative z-10 max-w-4xl mx-auto text-center text-white flex flex-col items-center">
    {data.upperheader && (
      <span class="!text-muted-50 subtitle block mb-2">
        {data.upperheader}
      </span>
    )}
    
    {data.title && <h2 class="title">{data.title}</h2>}
    
    {data.descriptionParagraphs?.map(p => (
      <p class="sans max-w-xl text-lg md:text-xl opacity-90" set:html={p}></p>
    ))}

    <div class="flex flex-col sm:flex-row justify-center gap-4 mt-10">
      {data.mainButtonText && (
        <a href={data.mainButtonLink || "/enroll"} class="btn-primary">
          {data.mainButtonText}
        </a>
      )}
      {data.secondButtonText && (
        <a 
          href={data.secondButtonLink || "/contact"} 
          class="btn-transparent"
        >
          {data.secondButtonText}
        </a>
      )}
    </div>
  </div>
</section>