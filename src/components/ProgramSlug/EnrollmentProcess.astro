---
const { data } = Astro.props;
---
<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-gray-900 mb-10 text-center">{data.title}</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      {data.steps.map((step: any) => (
        <div class="relative p-6 bg-gray-50 rounded-xl hover:shadow-lg transition-shadow">
          <div class="text-5xl font-bold text-red-100 absolute top-4 right-4">{step.stepNumber}</div>
          <h3 class="text-xl font-bold text-gray-900 mb-2 relative z-10">{step.title}</h3>
          <p class="text-gray-600 relative z-10">{step.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>