---
import { COMPANY_NAME } from "../../data/consts";
import ImageWithZoomEffect from "./ImageWithZoomEffect.astro";

const ctaMeetOurFleetPlaceholder = {
  upperHeading: "PREMIUM TRAINING AIRCRAFT",
  title: `THE ${COMPANY_NAME} FLEET`,
  description: `Train in technologically advanced aircraft (TAA) maintained by the best maintenance team in the industry. From foundational single-engine trainers to multi-engine glass cockpits, our fleet is selected to ensure you master the craft with reliable, high-quality equipment.`,
  image: {
    src: "/src/assets/instagram/pitcairn-flight-academy_pottstown-PA_flight-training_planes-on-field.jpg",
    alt: "Training aircraft in the clouds",
  },
};

const imagePlaceholder = {
  src: "/src/assets/instagram/pitcairn-flight-academy_pottstown-PA_flight-training_planes-on-field.jpg",
  alt: "Planes on field at Pitcairn Flight Academy in Pottstown, PA flight training",
};

const {
  ctaData = ctaMeetOurFleetPlaceholder,
  showButton = true,
  imageSide = "left",
  background = "blue",
  image = imagePlaceholder,
} = Astro.props;

const isImageOnLeft = imageSide === "left";
const isBackgroundBlue = background === "blue";

// Logic for conditional classes to keep the JSX clean
const sectionBg = isBackgroundBlue ? "bg-sky-950" : "bg-sky-900";
const textOrder = isImageOnLeft ? "lg:order-2" : "lg:order-1";
const imageOrder = isImageOnLeft ? "lg:order-1" : "lg:order-2";
---

<section
  id="our-mission"
  class=`relative py-20 md:py-28 overflow-hidden ${sectionBg}`
>
  <div
    class="absolute top-0 right-0 w-1/3 h-full bg-sky-500/5 blur-[120px] pointer-events-none"
  >
  </div>

  <div class="max-w-7xl mx-auto px-6 md:px-12 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 xl:gap-20 items-center">
      <div class=`flex flex-col ${textOrder} text-center lg:text-left`>
        {
          ctaData.upperHeading && (
            <span class="inline-block py-1 px-3 bg-sky-500/10 border border-sky-500/20 text-sky-400 text-xs font-bold tracking-[0.2em] uppercase rounded-2xlmb-6 self-center lg:self-start">
              {ctaData.upperHeading}
            </span>
          )
        }

        <h2
          class="text-4xl md:text-5xl font-bold text-white mb-8 tracking-tight uppercase leading-tight"
        >
          {ctaData.title}
        </h2>

        <div class="space-y-6 text-sky-300 text-lg leading-relaxed mb-10">
          <p>
            Our fleet is meticulously maintained to the highest standards,
            combining reliability, safety, and modern avionics to deliver a
            premium training experience.
          </p>
          <p>
            Each aircraft is selected to support pilots at every phase of their
            journey, from foundational skills to advanced flight operations.
          </p>
        </div>

        {
          showButton && (
            <div class="flex justify-center lg:justify-start">
              <a
                href="/airplane-rentals/"
                class="group relative inline-flex items-center justify-center px-8 py-4 font-bold text-white bg-sky-600 rounded-2xl overflow-hidden transition-all duration-300 hover:bg-sky-500 hover:shadow-[0_0_20px_rgba(14,165,233,0.4)]"
              >
                <span class="relative z-10">Meet Our Fleet</span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-5 h-5 ml-2 transition-transform duration-300 group-hover:transky-x-1"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"
                  />
                </svg>
              </a>
            </div>
          )
        }
      </div>

      <div
        class=`relative ${imageOrder} group`
        title="Click to view aircraft details"
      >
        <div
          class="absolute -inset-4 border border-white/5 rounded-2xl pointer-events-none group-hover:border-sky-500/20 transition-colors duration-500"
        >
        </div>

        <div
          class="relative overflow-hidden rounded-2xl shadow-2xl shadow-black/50 aspect-[4/3]"
        >
          <ImageWithZoomEffect
            src={image.src}
            alt={image.alt}
            class="w-full h-full object-cover"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent pointer-events-none"
          >
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
