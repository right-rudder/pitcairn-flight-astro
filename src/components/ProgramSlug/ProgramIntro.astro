---
import ImageComp from "../ImageComp.astro";

const imagesPlaceholders = [
  {
    src: "/src/assets/facebook/pitcairn-flight-academy_pottstown-PA_pilot-training_first-solo-woman-student-red-plane.jpg",
    alt: "First solo woman student with red plane at Pitcairn Flight Academy in Pottstown, PA",
  },
];
interface Props {
  data: {
    title?: string;
    upperheader?: string;
    descriptionParagraphs?: string[];
    highlights?: {
      highlightName: string;
      highlightValue: string;
      pricingObservation?: string;
    }[];
    programHighlights?: {
      benefits?: string[];
      requirements?: string[];
    };
  };
}

const { data } = Astro.props;

const costHighlight = data.highlights?.find(
  (h) =>
    h.highlightName.toLowerCase().includes("cost") ||
    h.highlightName.toLowerCase().includes("fee"),
);

const pricingObservation = costHighlight?.pricingObservation;
---

<section class="py-16 md:py-24 bg-white">
  <div class="max-w-7xl mx-auto px-6 md:px-12 flex flex-col lg:flex-row">
    <div class="flex flex-col">
      <!-- Intro -->
      <div class="max-w-4xl mb-16 lg:text-left text-center">
        {
          data.upperheader && (
            <span class="inline-block bg-sky-800 text-white text-sm font-bold tracking-[0.2em] px-6 py-2 uppercase rounded mb-4">
              {data.upperheader}
            </span>
          )
        }

        {
          data.title && (
            <h2 class="text-4xl md:text-5xl font-bold text-slate-900 tracking-tight mb-8">
              {data.title}
            </h2>
          )
        }

        {
          data.descriptionParagraphs && (
            <div class="space-y-4 text-lg text-slate-600 leading-relaxed">
              {data.descriptionParagraphs.map((p) => (
                <p set:html={p} />
              ))}
            </div>
          )
        }
      </div>
      <!-- Grid -->
      <div
        class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-6 gap-6 lg:gap-10 items-stretch px-4"
      >
        {
          data.programHighlights?.benefits && (
            <div class="xl:col-span-3 bg-slate-50 p-8 md:p-10 rounded-2xl border border-slate-100 flex flex-col hover:border-sky-600 transition-colors duration-300">
              <div class="flex items-center gap-3 mb-8">
                <div class="bg-sky-600 p-2 rounded-lg shadow-lg shadow-sky-200">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-5 h-5 text-white"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                </div>
                <h3 class="text-2xl font-bold text-slate-900">
                  Program Benefits
                </h3>
              </div>
              <ul class="space-y-5 flex-grow">
                {data.programHighlights.benefits.map((item) => (
                  <li class="flex items-start gap-4">
                    <svg
                      class="w-6 h-6 text-sky-500 shrink-0 mt-0.5"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                      />
                    </svg>
                    <span class="text-slate-700 font-medium leading-relaxed">
                      {item}
                    </span>
                  </li>
                ))}
              </ul>
            </div>
          )
        }

        {
          data.programHighlights?.requirements && (
            <div class="xl:col-span-3 bg-white p-8 md:p-10 rounded-2xl border border-slate-200 flex flex-col hover:shadow-xl hover:shadow-sky-900/50 transition-all duration-300">
              <div class="flex items-center gap-3 mb-8">
                <div class="bg-slate-100 p-2 rounded-lg">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-5 h-5 text-sky-600"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"
                    />
                  </svg>
                </div>
                <h3 class="text-2xl font-bold text-slate-900">Prerequisites</h3>
              </div>
              <ul class="space-y-5 flex-grow">
                {data.programHighlights.requirements.map((item) => (
                  <li class="flex items-start gap-4">
                    <div class="w-2 h-2 rounded-full bg-sky-400 mt-2.5 shrink-0 shadow-[0_0_8px_rgba(56,189,248,0.6)]" />
                    <span class="text-slate-700 font-medium leading-relaxed">
                      {item}
                    </span>
                  </li>
                ))}
              </ul>
            </div>
          )
        }
      </div>
    </div>
    <!-- Quick Details -->
    <div class="lg:w-[70%] px-2 flex flex-col gap-4">
      {
        data.highlights && (
          <div class=" xl:col-span-1 bg-sky-900 p-8 rounded-2xl shadow-2xl shadow-sky-900/20 hover:shadow-sky-900/80 text-white flex flex-col border border-sky-800">
            <h3 class="text-xl font-bold mb-8 text-sky-100 tracking-tight flex items-center gap-2">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                />
              </svg>
              Quick Details
            </h3>
            <div class="space-y-8 flex-grow">
              {data.highlights.map((item, index) => (
                <div class="group">
                  <span class="block text-sky-300/80 text-[10px] font-bold uppercase tracking-widest mb-1 group-hover:text-sky-300 transition-colors">
                    {item.highlightName}
                  </span>
                  <span class="text-lg font-semibold block leading-tight border-b border-sky-800/50 pb-2">
                    {item.highlightValue}
                  </span>
                </div>
              ))}
            </div>

            {pricingObservation && (
              <div class="mt-8 p-4 bg-sky-800/40 rounded-lg border border-sky-700/50">
                <p class="text-[11px] text-sky-200 italic leading-relaxed">
                  {pricingObservation}
                </p>
              </div>
            )}
          </div>
        )
      }
      <div class="rounded-3xl overflow-hidden">
        <ImageComp
          src={imagesPlaceholders[0].src}
          alt={imagesPlaceholders[0].alt}
          class="rounded-3xl animate-fast-zoom object-cover"
        />
      </div>
    </div>
  </div>
</section>
