---
import ImageWithZoomEffect from "./ImageWithZoomEffect.astro";

interface Props {
  data: {
    mainImage?: string;
    mainImageAlt?: string;
    title?: string;
    upperheader?: string;
    descriptionParagraphs?: string[];
    bulletPointLists?: {
      title: string;
      items: string[];
    }[];
  };
}

const { data } = Astro.props;
---

<section class="bg-sky-900">
  <div
    class="py-20 md:py-28 relative flex flex-col gap-6 lg:flex-row items-center justify-center max-w-7xl mx-auto"
  >
    {
      data.mainImage && (
        <div class="w-full lg:w-1/2 relative group">
          <div class="absolute -inset-3 border border-white/50 rounded-3xl -rotate-1 group-hover:rotate-0 transition-transform duration-500" />

          <div class="relative z-10 lg:aspect-square overflow-hidden rounded-3xl shadow-2xl shadow-sky-950/50">
            <ImageWithZoomEffect
              src={data.mainImage}
              alt={data.mainImageAlt || data.title}
              class="w-full h-full object-cover transition-transform duration-700"
            />

            <div class="absolute inset-0 bg-gradient-to-t from-sky-950/40 to-transparent pointer-events-none" />
          </div>
        </div>
      )
    }
    <div class="px-6 md:px-12">
      <div
        class="text-center max-w-3xl mx-auto mb-16 flex flex-col items-center"
      >
        {
          data.upperheader && (
            <span class="inline-block py-1 px-4 bg-sky-50 text-sky-600 text-xs font-bold tracking-widest uppercase rounded-full mb-4">
              {data.upperheader}
            </span>
          )
        }
        {
          data.title && (
            <h2 class="text-4xl md:text-5xl font-semibold text-white mb-6 tracking-widest uppercase">
              {data.title}
            </h2>
          )
        }
        {
          data.descriptionParagraphs?.map((p) => (
            <p
              class="text-xl text-white/90 tracking-wide leading-relaxed"
              set:html={p}
            />
          ))
        }
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
        {
          data.bulletPointLists?.map((list, index) => (
            <article class="group relative bg-white p-8 rounded-3xl border border-slate-100 shadow-sm hover:shadow-2xl hover:shadow-sky-100 transition-all duration-500 hover:-translate-y-2 flex flex-col overflow-hidden">
              <span class="absolute -right-4 -top-4 text-9xl font-bold text-slate-50 group-hover:text-sky-50 transition-colors duration-500 select-none pointer-events-none">
                {index + 1}
              </span>

              <div class="relative z-10">
                <div class="w-14 h-14 bg-sky-600 rounded-2xl flex items-center justify-center shadow-lg shadow-sky-200 mb-8 group-hover:bg-sky-700 transition-colors duration-300">
                  <span class="text-xl font-bold text-white">0{index + 1}</span>
                </div>

                <h3 class="text-2xl font-bold text-slate-900 mb-6 group-hover:text-sky-600 transition-colors duration-300">
                  {list.title}
                </h3>

                <ul class="space-y-4">
                  {list.items.map((item) => (
                    <li class="flex items-start gap-3 group/item">
                      <div class="mt-1.5 shrink-0">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="w-5 h-5 text-sky-500 group-hover/item:scale-110 transition-transform"
                          viewBox="0 0 20 20"
                          fill="currentColor"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                            clip-rule="evenodd"
                          />
                        </svg>
                      </div>
                      <span class="text-slate-600 font-medium leading-relaxed group-hover/item:text-slate-900 transition-colors">
                        {item}
                      </span>
                    </li>
                  ))}
                </ul>
              </div>

              <div class="absolute bottom-0 left-0 w-0 h-1.5 bg-sky-500 group-hover:w-full transition-all duration-500" />
            </article>
          ))
        }
      </div>
    </div>
  </div>
</section>
