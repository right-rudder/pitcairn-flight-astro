---
import { COMPANY_NAME } from "../../data/consts";

const features = [
  {
    title: "Safety Systems",
    desc: "All training follows strict FAA Part 141 standards with a 12-year zero-cancellation safety record.",
    icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
  },
  {
    title: "Sequential Mastery",
    desc: "Start with basic aircraft control, then move to radio work and complex maneuvers in a logical, building-block format.",
    icon: "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253",
  },
  {
    title: "Integrated Ground School",
    desc: "Theory meets practice. Our simulators and classroom sessions ensure you understand the 'Why' before the 'Fly'.",
    icon: "M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
  },
  {
    title: "Dedicated Mentorship",
    desc: "You aren't a number. Your primary instructor is a career pilot dedicated to your specific learning style.",
    icon: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z",
  },
];

const timeline = [
  { step: "01", label: "Arrival", sub: "Instructor Meet" },
  { step: "02", label: "Briefing", sub: "Mission Plan" },
  { step: "03", label: "Preflight", sub: "Exterior Walk" },
  { step: "04", label: "Airborne", sub: "Live Flight" },
  { step: "05", label: "Debrief", sub: "Next Mission" },
];
---

<section class="py-24 md:py-32 bg-slate-50 overflow-hidden observe-section">
  <div class="max-w-7xl mx-auto px-6">
    <div class="max-w-3xl mx-auto text-center mb-20">
      <span class="text-sky-600 font-bold text-sm uppercase tracking-[0.2em]"
        >New Pilot Orientation</span
      >
      <h2
        class="text-4xl md:text-5xl font-black text-slate-900 mt-4 mb-6 leading-tight"
      >
        What to Expect as an <span class="text-sky-600 italic"
          >Absolute Beginner</span
        >
      </h2>
      <p class="text-xl text-slate-600 leading-relaxed font-light">
        Aviation terminology can be intimidating. Weâ€™ve stripped away the jargon
        to show you exactly how we build a professional pilot from day one.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 mb-20">
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 h-full">
        {
          features.map((f) => (
            <div class="bg-white p-8 rounded-3xl border border-slate-200 shadow-sm hover:shadow-xl hover:shadow-sky-100 transition-all duration-500 group">
              <div class="w-12 h-12 bg-sky-50 rounded-xl flex items-center justify-center mb-6 group-hover:bg-sky-600 transition-colors">
                <svg
                  class="w-6 h-6 text-sky-600 group-hover:text-white transition-colors"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d={f.icon}
                  />
                </svg>
              </div>
              <h3 class="text-lg font-bold text-slate-900 mb-3">{f.title}</h3>
              <p class="text-sm text-slate-500 leading-relaxed italic">
                {f.desc}
              </p>
            </div>
          ))
        }
      </div>

      <div class="reveal h-full min-h-[400px]">
        <div
          class="rounded-[2.5rem] overflow-hidden shadow-2xl bg-slate-900 h-full relative group"
        >
          <video
            src="/videos/-alex-power-off-180.mp4"
            autoplay
            loop
            muted
            playsinline
            class="w-full h-full object-cover opacity-90 transition-transform duration-1000 group-hover:scale-105"
          ></video>
          <div
            class="absolute inset-0 bg-gradient-to-t from-slate-950/80 via-transparent to-transparent"
          >
          </div>
          <div class="absolute bottom-8 left-8">
            <p
              class="text-white font-bold tracking-widest text-xs uppercase opacity-80 mb-2"
            >
              Student Perspective
            </p>
            <h4
              class="text-white text-xl font-bold italic underline decoration-sky-500 decoration-4 underline-offset-8"
            >
              First Solo Flight Patterns
            </h4>
          </div>
        </div>
      </div>
    </div>

    <div
      class="bg-slate-950 p-10 md:p-16 rounded-[3rem] shadow-2xl relative overflow-hidden border border-white/5"
    >
      <div
        class="absolute top-0 right-0 w-64 h-64 bg-sky-600/10 rounded-full blur-[100px]"
      >
      </div>

      <div class="relative z-10">
        <div class="text-center mb-12">
          <p
            class="text-sky-400 font-bold text-xs uppercase tracking-[0.3em] mb-2"
          >
            The Flight Plan
          </p>
          <h3 class="text-3xl font-bold text-white leading-tight">
            Your First Lesson Timeline
          </h3>
        </div>

        <div
          class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-5 gap-8 relative"
        >
          <div
            class="hidden md:block absolute top-[2.25rem] left-[10%] right-[10%] h-0.5 bg-white/10"
          >
          </div>

          {
            timeline.map((t) => (
              <div class="relative flex flex-col items-center group">
                <div class="w-12 h-12 bg-slate-900 border-2 border-sky-500 rounded-full flex items-center justify-center text-white font-black z-10 group-hover:bg-sky-500 transition-all duration-300 shadow-[0_0_20px_rgba(14,165,233,0.3)]">
                  {t.step}
                </div>
                <h4 class="text-white font-bold mt-6 mb-1 text-lg">
                  {t.label}
                </h4>
                <p class="text-xs text-slate-400 uppercase tracking-widest">
                  {t.sub}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
