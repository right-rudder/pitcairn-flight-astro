---
import type { CollectionEntry } from "astro:content";
import ImageComp from "../ImageComp.astro";
import { FaClock, FaTag, FaArrowRight } from "react-icons/fa";

interface Props {
  program: CollectionEntry<"programs">;
  index: number;
  colSpan: string;
}

const { program, index, colSpan } = Astro.props;

const duration = program.data.programIntroduction?.highlights?.find(
  (h) =>
    h.highlightName.toLowerCase().includes("duration") ||
    h.highlightName.toLowerCase().includes("timeline")
)?.highlightValue;
const cost = program.data.programIntroduction?.highlights?.find(
  (h) =>
    h.highlightName.toLowerCase().includes("cost") ||
    h.highlightName.toLowerCase().includes("price")
)?.highlightValue;
---

<a
  href={`/programs/${program.slug}`}
  class={`testimonial-card  opacity-0 translate-y-10  border-gray-300  rounded-3xl  flex transition-all duration-700 ease-in-out hover:bg-slate-50 hover:-translate-y-2 hover:shadow-2xl hover:shadow-black/50 ${colSpan}`}
  style={`transition-delay : ${index * 150}ms;`}
>
  <!-- Image -->
  <div class="inset-0 bg-sky-950 overflow-hidden">
    <ImageComp
      src={program.data.image}
      alt={program.data.alt || program.data.title}
      class="w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-110 opacity-90 group-hover:opacity-100"
    />
  </div>
  <!-- Text -->
  <div class="p-8 flex flex-col bg-white">
    <h3
      class="text-2xl font-title font-bold text-sky-800 mb-3 group-hover:text-sky-600 transition-colors duration-300"
    >
      {program.data.title}
    </h3>

    <p class="text-sky-950 text-sm leading-relaxed mb-8 flex-1 line-clamp-3">
      {program.data.description}
    </p>
    <div>
      <div
        class="w-full flex items-center justify-center gap-3 px-6 py-4 font-bold text-sm tracking-wider uppercase text-slate-50 bg-sky-950 rounded-sm overflow-hidden transition-all duration-300 group-hover:bg-sky-600 group-hover:text-white"
      >
        <span class="z-10">Program Details</span>
        <FaArrowRight
          className=" z-10 text-sky-600 group-hover:text-white transition-transform duration-300 group-hover:translate-x-1"
        />
      </div>
    </div>
  </div>
</a>
