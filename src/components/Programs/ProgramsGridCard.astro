---
import type { CollectionEntry } from "astro:content";
import ImageComp from "../ImageComp.astro";
import { FaClock, FaArrowRight } from "react-icons/fa";

interface Props {
  program: CollectionEntry<"programs">;
  index: number;
  colSpan: string;
}

const { program, index, colSpan } = Astro.props;

const duration = program.data.programIntroduction?.highlights?.find((h) =>
  h.highlightName.toLowerCase().includes("duration"),
)?.highlightValue;
---

<a
  href={`/${program.slug}`}
  class={`group program-grid-card relative overflow-hidden rounded-3xl bg-sky-950 min-h-[400px] h-full ${colSpan} transition-all duration-500 hover:shadow-2xl border border-sky-800 hover:shadow-sky-900/50 hover:border-white`}
  style={`transition-delay: ${index * 150}ms`}
>
  <div class="absolute inset-0 z-0">
    <ImageComp
      src={program.data.image}
      alt={program.data.title}
      class="h-full w-full object-cover transition-transform duration-700 ease-out group-hover:scale-110 group-hover:opacity-40 opacity-70"
    />
  </div>

  <div
    class="absolute inset-x-0 bottom-0 p-8 transition-transform duration-500 group-hover:-translate-y-42 z-50"
  >
    <h3 class="font-title text-2xl font-bold text-white leading-tight">
      {program.data.title}
    </h3>
    {
      duration && (
        <div class="flex items-center gap-2 text-sky-300 text-sm font-medium mt-2">
          <FaClock size={12} /> {duration}
        </div>
      )
    }
  </div>

  <div
    class="absolute inset-0 z-20 flex flex-col justify-end px-8 py-6 bg-linear-to-t from-sky-950 via-sky-900/40 to-transparent translate-y-full transition-transform duration-500 ease-out group-hover:translate-y-0"
  >
    <p
      class="text-white/90 text-lg leading-relaxed mb-2 line-clamp-4 opacity-0 transition-opacity duration-300 delay-200 group-hover:opacity-100"
    >
      {program.data.description}
    </p>

    <div
      class="flex items-center gap-3 font-bold text-lg tracking-widest uppercase text-white border-b border-white/20 pb-2 w-fit"
    >
      Explore Program
      <div
        class="transition-transform duration-300 group-hover:translate-x-2 bounce-horizontal"
      >
        <FaArrowRight />
      </div>
    </div>
  </div>
</a>

<style>
  .program-grid-card {
    /* Start state: invisible and shifted down */
    opacity: 0;
    transform: translateY(30px);
    transition:
      opacity 0.8s ease-out,
      transform 0.8s ease-out;
    /* This ensures the hover transitions from our previous steps still work later */
    will-change: transform, opacity;
  }

  .program-grid-card.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>
