---
import type { CollectionEntry } from "astro:content";
import ImageComp from "../ImageComp.astro";
import { FaClock, FaArrowRight } from "react-icons/fa";

interface Props {
  program: CollectionEntry<"programs">;
  index: number;
  colSpan: string;
}

const { program, index, colSpan } = Astro.props;

const duration = program.data.programIntroduction?.highlights?.find((h) =>
  h.highlightName.toLowerCase().includes("duration")
)?.highlightValue;
---

<a
  href={`/programs/${program.slug}`}
  class={`group relative overflow-hidden rounded-3xl bg-sky-950 min-h-[400px] h-full ${colSpan} transition-all duration-500 hover:shadow-2xl hover:shadow-sky-900/50`}
  style={`transition-delay: ${index * 100}ms;`}
>
  <div class="absolute inset-0 z-0">
    <ImageComp
      src={program.data.image}
      alt={program.data.title}
      class="h-full w-full object-cover transition-transform duration-700 ease-out group-hover:scale-110 group-hover:opacity-40 opacity-70"
    />
  </div>

  <div
    class="absolute inset-x-0 bottom-0 z-10 p-8 transition-transform duration-500 group-hover:-translate-y-32 z-50"
  >
    <h3 class="font-title text-2xl font-bold text-white leading-tight">
      {program.data.title}
    </h3>
    {
      duration && (
        <div class="flex items-center gap-2 text-sky-300 text-sm font-medium mt-2">
          <FaClock size={12} /> {duration}
        </div>
      )
    }
  </div>

  <div
    class="absolute inset-0 z-20 flex flex-col justify-end p-8 bg-linear-to-t from-sky-950 via-sky-900/40 to-transparent translate-y-full transition-transform duration-500 ease-out group-hover:translate-y-0"
  >
    <p
      class="text-white/90 text-sm leading-relaxed mb-6 line-clamp-4 opacity-0 transition-opacity duration-300 delay-200 group-hover:opacity-100"
    >
      {program.data.description}
    </p>

    <div
      class="flex items-center gap-3 font-bold text-xs tracking-widest uppercase text-white border-b border-white/20 pb-2 w-fit"
    >
      Explore Program
      <FaArrowRight
        class="transition-transform duration-300 group-hover:translate-x-2"
      />
    </div>
  </div>
</a>
