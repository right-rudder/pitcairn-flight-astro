---
import { COMPANY_NAME } from "../../data/consts";

const stats = [
  { value: "10,000+", label: "Flight Hours", sub: "Combined Experience" },
  { value: "95%", label: "Checkride Pass Rate", sub: "First-Attempt Success" },
  { value: "100+", label: "Active Students", sub: "Currently Training" },
];

const values = [
  {
    title: "Student Centered",
    desc: "You're more than a number at Pitcairn Flight Academy. We genuinely care about your success. Our primary focus is you and your aviation goals.",
    icon: "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z",
  },
  {
    title: "Family Environment",
    desc: "We are a close knit community that supports and uplifts each other on the journey to completing aviation goals. When you're here, you're family.",
    icon: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z",
  },
  {
    title: "Affordable",
    desc: "Pitcairn Flight Academy offers affordable rental and instructor rates that make pilot training accessible to aspiring aviators from all walks of life.",
    icon: "M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
  },
];
---

<section class="py-24 bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto px-6">
    <div class="grid lg:grid-cols-2 gap-16 items-center mb-24">
      <div>
        <span
          class="text-sky-600 font-bold text-sm uppercase tracking-[0.2em] mb-4 block"
          >The {COMPANY_NAME} Difference</span
        >
        <h2
          class="text-4xl md:text-5xl font-black text-slate-900 leading-tight mb-6"
        >
          Training Pilots to Fly <br /><span class="text-sky-600 italic"
            >Safely & Proficiently</span
          >
        </h2>
        <div class="space-y-6 text-lg text-slate-600 leading-relaxed">
          <p>
            At Pitcairn, we are a <strong>Part 61 Academy</strong> built on a simple
            philosophy: your success is our only metric. We don't just provide ground
            school; we provide mentorship that covers every mile of your journey.
          </p>
          <div class="bg-sky-50 border-l-4 border-sky-500 p-8 rounded-r-2xl">
            <p class="font-bold text-slate-900 mb-2 italic">
              A Note on Instruction:
            </p>
            <p class="text-base">
              Many schools rely on "time-builders"â€”instructors just looking for
              hours to leave for the airlines. <strong>We are different.</strong
              > Our instructors teach out of a genuine love for aviation and a commitment
              to seeing you earn your wings.
            </p>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        {
          stats.map((stat, index) => (
            <div
              class={`p-10 rounded-[2rem] flex flex-col justify-center ${index === 0 ? "bg-sky-900 text-white sm:col-span-2" : "bg-sky-50 border border-sky-100"}`}
            >
              <div
                class={`text-5xl font-black mb-2 ${index === 0 ? "text-sky-400" : "text-slate-900"}`}
              >
                {stat.value}
              </div>
              <div class="font-bold uppercase tracking-widest text-xs mb-1">
                {stat.label}
              </div>
              <div
                class={`text-sm ${index === 0 ? "text-slate-400" : "text-slate-500"}`}
              >
                {stat.sub}
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {
        values.map((value) => (
          <div class="group p-8 rounded-3xl border border-slate-100 bg-white hover:shadow-2xl hover:shadow-sky-500/10 transition-all duration-500">
            <div class="w-14 h-14 bg-sky-100 text-sky-600 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-500">
              <svg
                class="w-7 h-7"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d={value.icon}
                />
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-slate-900 mb-4">
              {value.title}
            </h3>
            <p class="text-slate-600 leading-relaxed">{value.desc}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
